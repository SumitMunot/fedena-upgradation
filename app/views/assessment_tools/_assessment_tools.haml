- unless @assessment_tools.empty?
  %table{ align: "center", cellpadding: "1", cellspacing: "1", width: "100%"}
    %tr.tr-head
      %td= t("descriptive_indicators")
      %td= t("desc_text")
      %td
    %tr
      %td
      %td
      %td
    - @assessment_tools.each do |g|
      %tr{ class: "tr-#{cycle('odd', 'even')}"}
        %td.col-1
          = g.name
        %td.col-2
          = g.desc
        %td.col-3
          .category-edit
            = link_to t("edit_text"), { action: :edit, id: g.id }, remote: true
- else
  = t('no_assessment_tools')
