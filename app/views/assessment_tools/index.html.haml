#content-header
  = stylesheet_link_tag("observation_groups/show.css")
  = image_tag("examination/show_exam.png")
  %h1= t('weightages_text')
  %h3= t('new_text')
  #app-back-button
    = back_button
#inner-tab-menu
  %ul
    %li
      = link_to t('new_text'), { action: :new, id: @descriptive.id }, remote: true
#page-yield
  #flash-box
    - unless flash[:notice].nil?
      %p.flash-msg
        = flash[:notice]
  .bread_crumb
    - if @descriptive.describable_type == "Observation"
      = link_to t('observation_groups'), observation_groups_path
      »
      \#{link_to @observation_group.name, observation_group_path(@observation_group)} »
      \#{link_to @describable.name, observation_descriptive_indicators_path(@describable)} »
    - else
      = link_to t('fa_groups'), fa_groups_path
      »
      \#{link_to @fa_group.name, fa_group_path(@fa_group)} »
      \#{link_to @describable.fa_name, fa_criteria_descriptive_indicators_path(@describable)} »
    = @descriptive.name
  .title
    = t("name")
    .description
      \:   #{@descriptive.name}
  .title
    = t("desc_text")
    .description
      \:   #{@descriptive.desc}
  #assessment_tools
    = render 'assessment_tools'
  #modal-box{ style: "display:none;"}
