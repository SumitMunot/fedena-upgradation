#form
  - form_remote_for  :create_reminder,  :url => {:controller=>"reminders", :action => "send_reminder", :id=>@employee.id } do |l|
    = error_messages_for :create_reminder
    = l.hidden_field :from, :value=>@employee.user.id
    = l.hidden_field :to, :value=>@manager.id
    .label-field-pair
      %label{:for => "subject"}= t('subject')
      .text-input-bg1= l.text_field :subject
    .label-field-pair
      %label{:for => "start_date"}= t('message')
      .text-feild-bg= l.text_area :message, :cols=>25, :rows=>10
    #submit-button
      = submit_tag("#{t('send')}")
    .extender
