#grading-levels-form
  %h4= @batch.full_name unless @batch.nil?
  - form_remote_for @grading_level do |f|
    #form-errors
    - batch_id = (@batch.nil? ? nil : @batch.id)
    = f.hidden_field :batch_id, :value => batch_id
    .label-field-pair
      = f.label :"#{t('name')}"
      .input-field= f.text_field :name
    .label-field-pair
      = f.label :min_score, t('min_score')
      .input-field= f.text_field :min_score
    .label-field-pair
      = f.label :description, "Description"
      .input-field= f.text_field :description
    - if @credit
      .label-field-pair
        = f.label :credit_points, "Credit Points"
        .input-field= f.text_field :credit_points
    = f.submit "â–º #{t('save')}", :class => 'submit_button'
