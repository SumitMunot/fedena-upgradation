<div id="content-header">
  <%= image_tag("examination/show_exam.png") %>
  <h1><%= t('exams_text') %></h1>
  <h3><%= t('grading_levels_text') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="inner-tab-menu">
  <% if permitted_to? :index, :course %>
    <ul>
      <li><%= link_to t('course_text'), courses_path %></li>
    </ul>
  <% end %>
</div>
<div id="page-yield">
  <div id="flash_box">
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <div class="label-field-pair">
      <label for="student_course"><%= t('batch') %>
        <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %>
      </label>
      <div class="text-input-bg">
        <%= select :batch, :id,
          @batches.map {|b| [b.full_name, b.id] },
          {:prompt => "#{t('common')}"},
          {:onchange => "#{remote_function(
          :url => { :action => 'show', id: "value" },
          :with => "'batch_id='+value",
          :before => "Element.show('loader')",
          :success => "Element.hide('loader')"  )}"} %>
      </div></div>


    <div id="grading-levels" ><%= render :partial => "grading_levels" %></div>
    <div id="modal-box" style="display:none;"></div>


  </div>
</div>
