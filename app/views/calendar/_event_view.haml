- unless @events.empty?
  .current-date
    = I18n.l(@date,:format => :month_year)
  - @events.each do |h|
    .events
      .title
        .legend-icon{:style => "background:#000000;"}
        = h.title
      .extender
      .desc
        = h.description
        %br/
        = t('start_time')
        \:#{I18n.l(h.start_date,:format=>"%I:%M %p")}
        %br/
        = t('end_time')
        \:#{I18n.l(h.end_date,:format=>"%I:%M %p")}
      = link_to "X",{ action: :event_delete, id: h.id}, method: :DELETE, confirm: t('delete_confirm_msg'), class: :delete
      .extender
