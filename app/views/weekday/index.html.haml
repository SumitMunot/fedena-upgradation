#content-header
  = image_tag("show_timetable.png")
  %h1= t('timetable_text')
  %h3= t('weekdays_text')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .box
    .label-field-pair
      %label{:for => "timetable_entry_course_id"}
        = t('select_a_batch')
        \:
      .text-input-bg
        = select :batch, :id,                              |
          @batches.map {|b| [b.full_name, b.id] },         |
          {prompt: t('common')},                           |
          {onchange: "#{remote_function(                   |
          url: week_weekday_index_path(batch_id: "value"), |
          before: "Element.show('loader')",                |
          success: "Element.hide('loader')"  )}"}          |
        = image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" )
    #weekdays= render :partial => "weekdays"
    #modal-box{:style => "display:none;"}
    .extender
