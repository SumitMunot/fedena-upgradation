#content-header
  = image_tag("manage_news/manage_news_logo.png")
  %h1= t('events')
  %h3= t('edit_event')
  #app-back-button
    = back_button
#page-yield
  = flash[:notice]
  = form_for :event do |f|
    = error_messages_for 'event'
    .label-field-pair
      %label{:for => "start-date"}
        = t('start_date')
        \:
      .text-input-bg= calendar_date_select_tag "event[start_date]", I18n.l(@event.start_date.to_date,:format=>("%Y-%m-%d %H:%M")), :time => true, :readonly=>true, :popup=>"force"
    .label-field-pair
      %label{:for => "end-date"}
        = t('end_date')
        \:
      .text-input-bg= calendar_date_select_tag "event[end_date]", I18n.l(@event.end_date.to_date,:format=>("%Y-%m-%d %H:%M")), :time => true , :readonly=>true, :popup=>"force"
    .label-field-pair
      %label{:for => "title"}
        = t('title')
        \:
      .text-input-bg= f.text_field :title
    .label-field-pair
      %label{:for => "description"}
        = t('description')
        \:
    = f.text_area "description"
    .label-field-pair
      %label{:for => "is-holiday"}= t('is_holiday')
      = f.check_box :is_holiday
    .label-field-pair
      %label{:for => "end-date"}
        = t('common_event')
      = f.check_box :is_common
    = f.submit "â–º#{t('update_event')}"
