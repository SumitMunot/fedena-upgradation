.course-select
  - unless @batch_events.empty?
    %span.title
      = "#{t('course_associated')}"
      \:
    %div
      %ul#category-list
        - @batch_events.each do |c|
          %li{:class => "list#{cycle('odd','even')}"}
            .category-name= Batch.find(c.batch_id).full_name
            .category-edit= link_to "#{t('remove')}", :controller=>"event",:action=>"remove_batch", :id=>c
    = link_to_remote "#{t('select_more_course')}", :url=>{:controller=>"event", :action=>"select_course", :id=>params[:id]}, :html=>{:class=>"themed_text"}
    %br/
  - else
    %span.title
      = t('no_course_selected')
      \:
    = link_to_remote "#{t('select_a_course')}", :url=>{:controller=>"event", :action=>"select_course", :id=>params[:id]}, :html=>{:class=>"themed_text"}
