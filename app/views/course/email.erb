<div id="content-header">
  <%= image_tag("admission/admission_page_logo.jpg") %>
  <h1><%= t('class') %> : <%= @course.name%></h1>
  <h3><%= t('send_email') %></h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png", border: 0),'javascript: void(0);', onclick: "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <%= form_for :email do |f| %>

    <div class="label-field-pair">
      <label for="email_subject"><%= t('subject') %></label>
      <div class="text-input-bg"><%= f.text_field 'subject' %></div>
    </div>

    <div class="label-field-pair">
      <label for="email_recipients"><%= t('recipient') %></label>
      <div class="text-input-bg"><%= select 'email', 'recipients', [[t('students'),"Students"], [t('guardians'),"Guardians"], ["#{t('students')} & #{t('guardians')}","Students & Guardians"]] %></div>
    </div>

    <div class="message-area">
      <label for="email_message"><%= t('message') %></label>
      <%= f.text_area 'message' %>
    </div>

    <div class="submit-area">
      <%= image_submit_tag 'buttons/send.png' %>
    </div>

  <% end %>

</div>
