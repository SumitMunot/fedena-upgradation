#content-header
  = image_tag("examination/show_exam.png")
  %h1= t('ranking_levels_text')
  %h3= t('manage_ranking_levels')
  #app-back-button
    = back_button
#page-yield
  .course-select
    .label-field-pair
      %label{:for => "student_course"}
        = t('select_a_course')
        \:
      .text-input-bg
        = select :ranking_level, :course_id,                                                                                                                                        |
          Course.active.map {|b| [b.full_name, b.id]},                                                                                                                              |
          {:prompt => "#{t('select_a_course')}"},{:onChange => "#{remote_function(:url => {:action => "load_ranking_levels", course_id: "value"}, :with => "'course_id='+value")}"} |
  #flash
  #errors
    = error_messages_for 'ranking_level'
  #course_ranking_levels
