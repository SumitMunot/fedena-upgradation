<div id="content-header">
  <%= image_tag("  examination/show_exam.png") %>
  <h1><%= t('batches_text') %></h1>
  <h3><%= "#{t('show_elective')}" %></h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png", border: 0), 'javascript: void(0);', onclick: "history.back()" %>
  </div>
</div>
<div id="inner-tab-menu">
  <ul>
    <li><%= link_to_remote  t('add'), :url => { :controller=>"subjects",:action => 'new', :id => @batch,:id2=>@elective_group} %></li>
  </ul>
</div>
<div id="page-yield">
  <div id="flash-box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  </div>
  <div class="bread_crumb">
    <%= link_to t('course_text'), courses_path %> &raquo;
    <%= link_to @course.full_name, @course %> &raquo;
    <%= link_to "#{t('batch')} #{@batch.name}", [@course, @batch] %> &raquo;
    <%= link_to "#{t('electives')}", batch_elective_groups_path(@batch) %> &raquo;
    <%= @elective_group.name %>
  </div>


  <div class="box">


    <div id="subjects">

      <ul id="category-list">
        <% @electives.each do |subject| %>
          <li id="subject-<%= subject.id %>" class="list<%= cycle('even','odd')%>" >
            <div class="category-name"><%= subject.name %></div>
            <div class="category-code"><%= subject.code %></div>
            <div class="category-edit"><%= link_to_remote("#{t('edit_text')} ",
                :url => { :controller=>"subjects",:action => 'edit', :id =>subject,:id2=>@elective_group},
                :method => 'get' ) %> </div>
            <div class="category-delete"><%= link_to_remote("#{t('delete_text')}",
                :url => subject_path(subject),
                :method => 'delete',
                :confirm => t('delete_confirm_msg'),
                :update => "subject-#{subject.id}") %> </div>
            <div class="category-assign"><%= link_to " #{t('assign_student')}", :controller=>"student", :action=>"electives",:id=>@batch,:id2=>subject.id%>
            </div>
          </li>
        <% end %>
      </ul>

    </div>
    <div id="modal-box" style="display:none;"></div>


    <div class="extender"></div>
  </div>
</div>
