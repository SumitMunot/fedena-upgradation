<div id="content-header">
  <%= image_tag("  examination/show_exam.png") %>
  <h1><%= t('batches_text') %></h1>
  <h3><%= "#{t('new_elective')}" %></h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png", border: 0), 'javascript: void(0);', onclick: "history.back()" %>
  </div>
</div>
<div id="inner-tab-menu">
  <ul>
    <li><%= link_to t('new_text'), new_batch_elective_group_path(@batch) %></li>

  </ul>
</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="bread_crumb">
    <%= link_to t('courses_text'), courses_path %> &raquo;
    <%= link_to @course.full_name, @course %> &raquo;
    <%= link_to "#{t('batch')} #{@batch.name}", [@course, @batch] %> &raquo;
    <%= link_to "#{t('electives')}", batch_elective_groups_path(@batch) %> &raquo;
    <%= t('new_text')   %>
  </div>
  <div class="box">


    <%= form_for [@batch, @elective_group] do |f| %>
      <%= f.error_messages :header_message => nil %>

      <div class="label-field-pair">
        <div class="label-container"> <%= f.label "#{t('name')}" %></div>
        <div class="input-container"><%= f.text_field :name %></div>
      </div>

      <%= submit_tag "", :value => "â–º #{t('save')}", :class => "submit_button" %>

    <% end %>

    <div class="extender"></div>
  </div>
</div>
