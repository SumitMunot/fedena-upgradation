#content-header
  = image_tag("  examination/show_exam.png")
  %h1= t('batches_text')
  %h3= "#{t('new_elective')}"
  #app-back-button
    = back_button
#inner-tab-menu
  %ul
    %li= link_to t('new_text'), new_batch_elective_group_path(@batch)
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .box
    .bread_crumb
      = link_to t('course_text'), courses_path
      »
      \#{link_to @course.full_name, @course} »
      \#{link_to @batch.name, [@course, @batch]} »
      \#{t('elective_group')}
    %ul#category-list
      - @elective_groups.each do |elective|
        %li{:class => "list#{cycle('odd', 'even')}"}
          .category-name= link_to elective.name, [@batch, elective]
          .category-edit
            = link_to t('edit_text'),                                          |
              :controller=>"elective_groups",:action => "edit", :id =>elective |
          - @subjects= Subject.find_all_by_elective_group_id(elective, :conditions => "is_deleted = '0'")
          - if @subjects.empty?
            .category-delete
              = link_to(t('delete_text'), [@batch, elective], |
                :method => 'delete',                          |
                :confirm => t('delete_confirm_msg'))          |
    .extender
