#content-header
  = image_tag("  examination/show_exam.png")
  %h1= t('batches_text')
  %h3= "#{t('show_elective')}"
  #app-back-button
    = back_button
#inner-tab-menu
  %ul
    %li= link_to_remote  t('add'), :url => { :controller=>"subjects",:action => 'new', :id => @batch,:id2=>@elective_group}
#page-yield
  #flash-box
    - unless flash[:notice].nil?
      %p.flash-msg
        = flash[:notice]
  .bread_crumb
    = link_to t('course_text'), courses_path
    »
    \#{link_to @course.full_name, @course} »
    \#{link_to "#{t('batch')} #{@batch.name}", [@course, @batch]} »
    \#{link_to "#{t('electives')}", batch_elective_groups_path(@batch)} »
    \#{@elective_group.name}
  .box
    #subjects
      %ul#category-list
        - @electives.each do |subject|
          %li{:class => "list#{cycle('even','odd')}", :id => "subject-#{subject.id}"}
            .category-name= subject.name
            .category-code= subject.code
            .category-edit
              = link_to_remote("#{t('edit_text')} ",                                                       |
                :url => { :controller=>"subjects",:action => 'edit', :id =>subject,:id2=>@elective_group}, |
                :method => 'get' )                                                                         |
            .category-delete
              = link_to_remote("#{t('delete_text')}", |
                :url => subject_path(subject),        |
                :method => 'delete',                  |
                :confirm => t('delete_confirm_msg'),  |
                :update => "subject-#{subject.id}")   |
            .category-assign
              = link_to " #{t('assign_student')}", :controller=>"students", :action=>"electives",:id=>@batch,:id2=>subject.id
    #modal-box{:style => "display:none;"}
    .extender
