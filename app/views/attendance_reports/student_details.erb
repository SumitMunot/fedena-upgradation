<div id="content-header">
  <%= image_tag("attendence/attendence.png") %>
  <h1><%= t('attendance_report') %></h1>
  <h3><%= t('student_report') %></h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png", border: 0),'javascript: void(0);', onclick: "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <div class="label-field-pair">
    <label><%= t('student_details') %> <%= @student.full_name %></label>
  </div>
  <table id="listing" align="center" width="80%">
    <tr class="tr-head">
      <td>
        <%= t('date_text') %>
      </td>
      <td>
        <%= t('status') %>
      </td>
      <td>
        <%= t('reason') %>
      </td>
    </tr>
    <tr class="blank"></tr>
    <% @report.each do |r| %>
      <tr class="tr-<%= cycle('odd', 'even') %>">
  <%# @details = PeriodEntry.find(r.period_table_entry_id) %>
        <td class="col-2"><%= r.month_date.to_date %></td>
        <td class="col-3">
          <% if @config.config_value == 'Daily' %>
            <% if r.forenoon and r.afternoon %>
              <%= "#{t('full_day')}" %>
            <% elsif r.afternoon %>
              <%= "#{t('afternoon')}" %>
            <% elsif r.forenoon %>
              <%= "#{t('forenoon')}" %>
            <% else %>
              <%= "#{t('absent')}" %>
            <% end %>
          <% else %>
            <%= "#{t('absent')}" %>
          <% end %>
        </td>
        <td class="col-2">
          <%= r.reason %></td>
        <% end %>
    </tr>
  </table>
</div>
