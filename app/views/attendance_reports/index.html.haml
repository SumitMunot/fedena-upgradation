= javascript_include_tag :application
#content-header
  = image_tag("attendence/attendence.png")
  %h1= t('attendance_report')
  %h3= t('report')
  #app-back-button
    = back_button
#inner-tab-menu
  %ul
    / <li><haml_loud> link_to t(&#39;advanced&#39;), :controller=&gt;&quot;student_attendance&quot;, :action=&gt;&quot;advance_search&quot; </haml_loud></li>
#page-yield
  .label-field-pair
    %label
      = t('select_a_batch')
      \:
    .text-input-bg
      - if @config.config_value == 'Daily'
        = select :batch, :id, @batches.map {|b| [b.full_name, b.id] }, {:prompt => t('select_a_batch')}, 
        {:onchange => "onChangeRequest(this, '#{url_for(action: :mode, batch_id: 'paramid', subject_id: '')}')"}
      - else
        = select :batch, :id, @batches.map {|b| [b.full_name, b.id] }, { :prompt => t('select_a_batch')}, 
        { :onchange => "onChangeRequest(this, '#{url_for(action: :subject, batch_id: 'paramid')}')"}
      = image_tag("loader.gif", align: :absmiddle, border: 0, id: :loader, style: "display: none;" )
      .extender
  #subject
  #mode
  #month
  #year
  #report
