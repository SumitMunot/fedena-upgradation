#content-header
  = image_tag("mages/student_details/student_details_logo.jpg")
  %h1= t('student_details')
  %h3= t('report_center')
  #app-back-button
    = back_button
#page-yield
  #exam-results-dashboard
    %h3= t('academics')
    .exam-results-reports-col
      - if permitted_to? :exam_report, :student
        %h4.themed_text= t('recent_exams')
        %ul
          - @exam_groups.each do |e|
            %li= link_to e.name, { :action => 'generated_report',:exam_group=>e.id, :student => @student.id}
      %h4.themed_text= t('subject_wise_result')
      %ul
        - @subjects.each do |s|
          %li= link_to s.name, { :action => 'generated_report3', :student => @student.id, :subject => s.id }
    .exam-results-reports-col
      %h4.themed_text= t('detailed_report')
      %ul
        - unless @grouped_exams.empty?
          %li= link_to "Transcript Report", { :controller=>'exam', :action => 'student_transcript',:transcript=>{:batch_id=>@student.batch_id},:student_id=>@student.former_id,:flag=>"1" }
        - else
          %li= link_to "Transcript Report", { :controller=>'exam', :action => 'student_transcript',:transcript=>{:batch_id=>@student.batch_id},:student_id=>@student.former_id,:flag=>"1" }
        - if Settings.cce_enabled?
          %li= link_to "CCE Transcript Report", { :controller => 'cce_reports', :action => 'student_transcript',:id=>@student.id, :type=>"former" }
    .extender
  #attendance-reports-dashboard
    %h3= t('attendance')
    %h4.themed_text= t('detailed_report')
    %ul
      - @old_batches.each do |b|
        %li= link_to b.name, :action => 'student_report', :id => @student.id, :year => b.id
