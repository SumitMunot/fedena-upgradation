#content-header
  = image_tag("show_timetable.png")
  %h1= t('timetable_text')
  %h3= t('view')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  = form_for :timetable_entry do |s|
    .label-field-pair
      %label{:for => "timetable_entry_course_id"}= t('select_a_tte')
      = image_tag("loader.gif", align: :absmiddle, border: 0, id: :loader, style: "display: none;" )
      .text-input-bg
        = select :timetable_entry, :timetable_id, @timetables.map {|c| ["#{c.start_date.strftime("%d %b %Y")} - #{c.end_date.strftime("%d %b %Y")}", c.id]}, |
          { selected: @current.present? ? @current.id : nil, prompt: t('select_a_tte')},                                                                     |
          { onChange: "onChangeRequest(this, '#{url_for(action: :update_student_tt, timetable_id: 'paramid', id: @student.id)})"}                            |
  #box
    - if @current.present?
      = render :partial=>'student_timetable'
