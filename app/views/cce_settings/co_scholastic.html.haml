    %p.flash-msg
      = flash[:notice]
  .box
    .link-box
      .link-heading= link_to "Co-Scholastic Items",:controller=>'observation_groups'
      .link-descr= "Manage co-scholastic items"
    .link-box
      .link-heading= link_to "Assign Co-Scholastic Items",:controller=>'observation_groups',:action=>'assign_courses'
      .link-descr= "Assign Co-Scholastic itesms to courses."
    .extender
