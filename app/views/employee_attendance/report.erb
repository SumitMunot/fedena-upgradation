<div id="content-header">
  <%= image_tag("attendence/attendence.png") %>
  <h1><%= t('employee_attendance_text') %></h1>
  <h3><%= t('reports_text') %></h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png", border: 0), 'javascript:void(0)', "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="bread_crumb">
      <%= link_to t('hr'), :controller => "employee", :action=>"hr" %> &raquo;
      <%= link_to t('employee_leave_management'), :controller => "employee", :action => "employee_attendance" %> &raquo;
      <%= t('reports_text') %>
    </div>
  <%= form_for :employee_department do |s| %>
    <div class="label-field-pair">
      <label for="employee_department_select"><%= t('select_the_department') %></label>
      <div class="text-input-bg"><%= select :employee_department, :department_id, @departments.map {|c| [c.name, c.id]},
          {:prompt => "#{t('select_a_department')}"},
          {:onChange => "#{remote_function(:url => {:action => "update_attendance_report"},
          :with => "'department_id='+value")}"} %></div>
    </div>
  <% end %>

  <div id="attendance_report"> </div>

</div>
