= stylesheet_link_tag("employee_attendance/manual_reset.css")
#content-header
  = image_tag("  HR/leave-new.png")
  %h1= t('manual_leave_reset')
  %h3= t('reset_employee_leave_manually')
  #app-back-button
    = back_button
#page-yield
  .bread_crumb
    = link_to t('hr'), :controller => "employee", :action=>"hr"
    »
    \#{link_to t('employee_leave_management'), :controller => "employee", :action => "employee_attendance"} »
    \#{t('reset_leave')}
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  #box
    .link-box
      .link-heading= link_to "#{t('leave_reset_settings')}", :action => "leave_reset_settings"
      .link-descr
        = t('configure_automatic_leave_reset')
    .link-box
      .link-heading= link_to "#{t('reset_all')} ", :action => "employee_leave_reset_all"
      .link-descr
        = t('reset_leave_count_for_all')
        \.
    .link-box
      .link-heading= link_to "#{t('department_reset')}", :action => "employee_leave_reset_by_department"
      .link-descr
        = t('reset_emp_leave_count_by_dept')
        \.
    .link-box
      .link-heading= link_to "#{t('individual_reset')}", :action => "employee_leave_reset_by_employee"
      .link-descr= t('reset_emp_leave_count_ind')
