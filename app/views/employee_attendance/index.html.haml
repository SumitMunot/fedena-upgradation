= stylesheet_link_tag("employee_attendance/index.css")
#content-header
  = image_tag("attendence/attendence.png")
  %h1= t('employee_attendance_text')
  %h3= t('home')
  #app-back-button
    = back_button
#page-yield
  .box
    - unless flash[:notice].nil?
      %p.flash-msg
        = flash[:notice]
    .link-box
      .link-heading= link_to "#{t('add_type')}", :controller=>"employee_attendance", :action=>"add_leave_types"
      .link-descr
        = t('add_and_edit_employee_leave_types')
        \.
    .link-box
      .link-heading= link_to "#{t('attendance_register')}", :controller=>"employee_attendance", :action=>"register"
      .link-descr= t('register_attendance')
    .link-box
      .link-heading= link_to "#{t('attendance_report')}", :controller=>"employee_attendance", :action=>"report"
      .link-descr= t('attendance_report')
