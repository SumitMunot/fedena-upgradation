      %label{:for => "category_name"}= t('enable_automatic_reset')
      .check_box= check_box_tag "auto_reset",:checked => false
    .label-field-pair
      %label{:for => "category_name"}= t('rest_period')
      .text-input-bg= text_field_tag :code
