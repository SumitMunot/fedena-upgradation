= stylesheet_link_tag("employee_attendance/leave_application.css")
#content-header
  = image_tag("  HR/leave-new.png")
  %h1= t('leave_application')
  %h3= t('approve_deny')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  #leave-info
    %ul#category-list
      %li{:class => "list#{cycle('odd','even')}"}
        .category-name
          = t('name')
          \:
        = Employee.find(@applied_leave.employee_id).first_name
      %li{:class => "list#{cycle('odd','even')}"}
        .category-name
          = t('manager_name')
          \:
        - reporting_manager = Employee.find(@applied_leave.employee_id).reporting_manager_id
        = Employee.find(reporting_manager).first_name
      %li{:class => "list#{cycle('odd','even')}"}
        .category-name
          = t('leave_type')
          \:
        = @leave_type.name
      %li{:class => "list#{cycle('odd','even')}"}
        .category-name
          = t('half_day')
          \:
        - if @applied_leave.is_half_day == true
          = "Yes"
        - else
          = "No"
      %li{:class => "list#{cycle('odd','even')}"}
        .category-name
          = t('leave_start_date')
          \:
        = @applied_leave.start_date.strftime("%d %b, %Y")
      %li{:class => "list#{cycle('odd','even')}"}
        .category-name
          = t('leave_end_date')
          \:
        = @applied_leave.end_date.strftime("%d %b, %Y")
      %li{:class => "list#{cycle('odd','even')}"}
        .category-name
          = t('reason')
          \:
        = @applied_leave.reason
      %li{:class => "list#{cycle('odd','even')}"}
        .category-name
          = t('status')
          \:
        = "#{t('approved')}" if @applied_leave.approved == true and @applied_leave.viewed_by_manager == true
        = "#{t('denied')}" if @applied_leave.approved == false and @applied_leave.viewed_by_manager == true
        = "#{t('pending_approval')}" if @applied_leave.approved == false and @applied_leave.viewed_by_manager == false
      %li{:class => "list#{cycle('odd','even')}"}
        .category-name
          = t('leave_count')
          \:
        = @leave_count.leave_taken
        \/ #{@leave_count.leave_count}
    - unless @applied_leave.viewed_by_manager == true
      .buttons
        .approve_button
          = link_to_remote "► #{t('approve')}",                                                            |
            :url => {:action => "approve_remarks", :id=>@applied_leave.id},:html=> {:class=>'user_button'} |
        .cancel_button
          = link_to_remote "► #{t('deny')}",                                                            |
            :url => {:action => "deny_remarks", :id=>@applied_leave.id},:html=> {:class=>'user_button'} |
#modal-box{:style => "display:none;"}
