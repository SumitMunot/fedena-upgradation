<div id="content-header">
  <%= image_tag("  attendence/attendence.png") %>
  <h1><%= t('automatic_reset') %></h1>
  <h3><%= t('configure_auto_leave_reset') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("  buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="inner-tab-menu">
  <ul>
    <li><%= link_to "#{t('manual_reset')}", :action=>"manual_reset" %></li>
  </ul>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <%= error_messages_for 'leave_type' %>

    <div class="label-field-pair">
      <label for="category_name"><%= t('enable_automatic_reset') %></label>
      <div class="check_box"><%= check_box_tag "auto_reset",:checked => false %></div>
    </div>

    <div class="label-field-pair">
      <label for="category_name"><%= t('rest_period') %></label>
      <div class="text-input-bg"><%= text_field_tag :code %></div>
    </div>

    <div id="submit-button">
      <%=submit_tag("â–º #{t('save')}") %>
    </div>
  </div>

</div>
