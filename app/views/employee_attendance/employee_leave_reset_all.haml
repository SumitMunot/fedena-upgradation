= javascript_include_tag :application
= stylesheet_link_tag("employee_attendance/employee_leave_reset_all.css")
#content-header
  = image_tag("HR/leave-new.png")
  %h1= t('full_leave_reset')
  %h3= t('reset_leave_count_for_all')
  #app-back-button
    = back_button
#page-yield
  #box
    - unless flash[:notice].nil?
      %p.flash-msg
        = flash[:notice]
    .bread_crumb
      = link_to t('hr'), :controller => "employee", :action=>"hr"
      »
      \#{link_to t('employee_leave_management'), :controller => "employee", :action => "employee_attendance"} »
      \#{link_to t('reset_leave'), :controller => "employee_attendance", :action => "manual_reset"} »
      \#{t('reset_all')}
    #main-reset-box
      #reset-box
        %p
          = t('reset_count_msg')
        #skip
          = link_to "► #{t('reset')}", {:action =>'update_employee_leave_reset_all', :remote => true}, {:class=>"user_button"}
        %div
          = link_to "► #{t('cancel')}", { :action => "manual_reset"}, :class=>"user_button"
