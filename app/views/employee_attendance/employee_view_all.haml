= javascript_include_tag :application
#content-header
  = image_tag("  HR/show_hr.png")
  %h1= t('view_all')
  %h3= t('view_all')
  #app-back-button
    = back_button
#page-yield
  .label-field-pair
    %label
      = t('select_a_department')
      \:
    .text-input-bg
      = select :subject_assignment, :department_id, @departments.map { |s| [s.name, s.id] }, |
        {:prompt => "#{t('select_a_department')}"},                                          |
        {:onChange => "onChangeRequest(this, '#{url_for(action: :employees_list, department_id: 'paramid')}')"}
  .extender
  #employee_list
