.heading.themed_text= t('new_applications_from_employee')
%table#listing{:width => "100%"}
  %tr.tr-head
    %td= t('name')
    %td= t('start_date')
    %td= t('end_date')
  - @reporting_employees.each do |e|
    - @applied_leaves = ApplyLeave.find_all_by_employee_id(e.id, :order=>"start_date DESC")
    - unless @applied_leaves == []
      - @applied_leaves.each do |l|
        - if l.viewed_by_manager == false
          %tr{:class => "tr-#{cycle('odd', 'even')}"}
            %td.col-2= link_to "#{Employee.find(l.employee_id).first_name}",:controller => "employee_attendance", :action=>"leave_application", :id=>l.id
            %td.col-2= link_to "#{l.start_date.strftime("%d/%m/%Y")}",:controller => "employee_attendance", :action=>"leave_application", :id=>l.id
            %td.col-2= link_to "#{l.end_date.strftime("%d/%m/%Y")}",  :controller => "employee_attendance", :action=>"leave_application", :id=>l.id
        / if
      / |l|
    - else
    / unless
