%ul.leave-type-list
  - unless @leave_types.empty?
    %li.listheading
      .leave-type-name
        = t('active_leave')
    - @leave_types.each do |c|
      %li{:class => "list#{cycle('odd', 'even')}"}
        .leave-type-name
          = c.name
          \-#{c.code}
        .leave-type-edit= link_to "#{t('edit_text')}", {:action => "edit_leave_types", :id=>c.id}
        .leave-type-edit= link_to "#{t('delete_text')}", {:action => "delete_leave_types", :id=>c.id},:confirm=>"#{t('delete_confirm_msg')}", method: :DELETE
        .leave-type-edit= "#{t('Inactive')}" unless c.status == true
    - unless @inactive_leave_types.empty?
      %li.listheading
        .leave-type-name
          = t('inactive_leave')
      - @inactive_leave_types.each do |c|
        %li{:class => "list#{cycle('odd', 'even')}"}
          .leave-type-name
            = c.name
            \-#{c.code}
          .leave-type-edit= link_to "#{t('edit_text')}", {:action => "edit_leave_types", :id=>c.id}
          .leave-type-edit= link_to "#{t('delete_text')}", {:action => "delete_leave_types", :id=>c.id},:confirm=>"#{t('delete_confirm_msg')}", method: :DELETE
  - else
    %p.flash-msg= t('employee_leave_types_records')
