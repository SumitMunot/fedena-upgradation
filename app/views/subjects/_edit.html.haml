= csrf_meta_tag
#subjects-form
  %p= @batch.full_name unless @batch.nil?
  = form_for @subject, :remote => true do |f|
    - elective_group_id = (@elective_group.nil? ? nil : @elective_group.id)
    = f.hidden_field :elective_group_id, :value => elective_group_id
    #form-errors
    .label-field-pair
      .label-container
        %label= t('name')
      .input-container= f.text_field :name
    .label-field-pair
      .label-container
        %label= t('code')
      .input-container
        = f.text_field :code
    .label-field-pair
      .label-container
        %label= t('max_weekly_class')
      .input-container
        = f.text_field :max_weekly_classes
    - if @batch and (@batch.cwa_enabled? or @batch.gpa_enabled?)
      .label-field-pair
        .label-container
          %label Credit Hours
        .input-container
          = f.text_field :credit_hours
    .label-field-pair
      .label-container
        %label= t('no_exam')
      .input-container= f.check_box :no_exams
    = submit_tag "", :value => "â–º #{t('save')}", :class => "submit_button"
