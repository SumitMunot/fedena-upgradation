= javascript_include_tag :application
#content-header
  = image_tag("show_settings.png")
  %h1= t('subject')
  %h3= t('home')
  #app-back-button
    = back_button
#page-yield
  #flash-box
    - unless flash[:notice].nil?
      %p.flash-msg
        = flash[:notice]
  .box
    .label-field-pair
      %label{:for => "student_course"}
        = t('select_a_batch')
        \:
        \#{image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader", :style =>"display: none;" )}
      .text-input-bg
        = select :batch, :id,                         |
          @batches.map {|b| [b.full_name, b.id] },    |
          { :prompt =>  t('select_a_batch')},             |
          {:onChange => "onChangeRequest(this, '#{url_for(action: :show_batch, batch_id: 'paramid')}')"}
    #subjects
    #modal-box{:style => "display:none;"}
    .extender
