#content-header
  = image_tag("sms/sms_icon.png")
  %h1= t('sms_text')
  %h3= t('messages')
  #app-back-button
    = back_button
#page-yield
  .box
    %table#listing{:align => "center", :cellpadding => "1", :cellspacing => "1", :width => "100%"}
      %tr.tr-head
        %td= t('sms_messages')
        %td
          = t('total_sms_sent')
          \: #{@total_sms}
      %tr.tr-blank
      - @sms_messages.each do |sms|
        %tr{:class => "tr-#{cycle('odd', 'even')}"}
          %td.col-4= link_to sms.body, { :action=> 'show_sms_logs', :id=>sms.id}
          %td.col-7= sms.created_at.strftime("%A, %d. %B %Y, %H:%M")
    = will_paginate @sms_messages
