#list
  .sel-list
    = t('select')
    = select_all('each_list')
    = select_none('each_list')
  - @students.each do |student|
    %div{:class => "name_list#{cycle('odd', 'even')} each_list"}
      %li
        %label
          = check_box_tag "send_sms[student_ids][]", student.id, false,:class=>'right'
          .att_list_names= student.full_name
.label-field-pair
  .text-input-bg
    = text_area :send_sms,:message, :rows=>5,:cols=>30
= submit_tag "#{t('send_sms')}",:class=>'submit_button'
