#content-header
  = image_tag("sms/sms_icon.png")
  %h1= t('sms_text')
  %h3= t('settings')
  #app-back-button
    = back_button
#page-yield
  = form_for :sms_settings do |s|
    #list
      %div{:class => "name_list#{cycle('odd', 'even')}"}
        %li
          %label
            = s.check_box :application_enabled, :checked=>@application_sms_enabled.is_enabled
            .att_list_names= t('application')
      = s.submit "#{t('update')}", :class=>'submit_button'
  - unless @application_sms_enabled.is_enabled == false
    %h4
      = t('general_sms_setting')
      \:
    = form_for :general_settings, :url=>{:controller=>"sms",:action=>"update_general_sms_settings"} do |sms|
      #list
        %div{:class => "name_list#{cycle('odd', 'even')}"}
          %li
            %label
              = sms.check_box :student_admission_enabled, :checked=>@student_admission_sms_enabled.is_enabled
              .att_list_names= t('student_admission')
        %div{:class => "name_list#{cycle('odd', 'even')}"}
          %li
            %label
              = sms.check_box :exam_schedule_result_enabled, :checked=>@exam_schedule_result_sms_enabled.is_enabled
              .att_list_names
                = t('exam_schedule')
                \/ #{t('result')}
        %div{:class => "name_list#{cycle('odd', 'even')}"}
          %li
            %label
              = sms.check_box :student_attendance_enabled, :checked=>@student_attendance_sms_enabled.is_enabled
              .att_list_names= t('attendance')
        %div{:class => "name_list#{cycle('odd', 'even')}"}
          %li
            %label
              = sms.check_box :news_events_enabled, :checked=>@news_events_sms_enabled.is_enabled
              .att_list_names= t('events')
        %div{:class => "name_list#{cycle('odd', 'even')}"}
          %li
            %label
              = sms.check_box :sms_parents_enabled, :checked=>@parents_sms_enabled.is_enabled
              .att_list_names= t('send_sms_to_parents')
        %div{:class => "name_list#{cycle('odd', 'even')}"}
          %li
            %label
              = sms.check_box :sms_students_enabled, :checked=>@students_sms_enabled.is_enabled
              .att_list_names= t('send_sms_to_students')
        %div{:class => "name_list#{cycle('odd', 'even')}"}
          %li
            %label
              = sms.check_box :sms_employees_enabled, :checked=>@employees_sms_enabled.is_enabled
              .att_list_names= t('send_sms_to_employees')
        = sms.submit "#{t('update')}",:class=>'submit_button'
