#content-header
  = image_tag("examination/show_exam.png")
  %h1= t('exams_text')
  %h3= t('edit_exam_group')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .box
    .bread_crumb
      = link_to t('course_text'), courses_path
      »
      \#{link_to @course.full_name, @course} »
      \#{link_to "#{t('batch')}  #{@batch.name}"} »
      \#{link_to "#{t('exam_text')}", batch_exam_groups_path(@batch)} »
      \#{t('edit_exam')}
    = form_for [@batch, @exam_group] do |f|
      = f.error_messages
      .label-field-pair
        %label{:for => "exam_name"}= f.label "#{t('new_text')}"
        .text-input-bg
          = f.text_field :name
      #sub_button= submit_tag "", :value => "► #{t('save')}", :class => "submit_button"
