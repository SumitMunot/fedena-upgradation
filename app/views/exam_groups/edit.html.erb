<div id="content-header">
<%= image_tag("examination/show_exam.png") %>
  <h1><%= t('exams_text') %></h1>
  <h3><%= t('edit_exam_group') %></h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png", border: 0), 'javascript:void(0)', "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <div class="bread_crumb">
         <%= link_to t('course_text'), courses_path %> &raquo;
        <%= link_to @course.full_name, @course %> &raquo;
        <%= link_to "#{t('batch')}  #{@batch.name}" %> &raquo;
        <%= link_to "#{t('exam_text')}", batch_exam_groups_path(@batch) %> &raquo;
      <%= t('edit_exam') %>
        </div>


    <%= form_for [@batch, @exam_group] do |f| %>

      <%= f.error_messages %>


      <div class="label-field-pair">
        <label for="exam_name"><%= f.label "#{t('new_text')}" %></label>
        <div class="text-input-bg"> <%= f.text_field :name %></div>
      </div>
      <div id="sub_button"><%= submit_tag "", :value => "â–º #{t('save')}", :class => "submit_button" %></div>



    <% end %>

  </div></div>
