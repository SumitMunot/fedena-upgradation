%ul.category-list
  - unless @categories.empty?
    %li.heading= t('earnings')
    - @categories.each do |c|
      %li{:class => "list#{cycle('odd', 'even')}"}
        .category-name= c.name
        .category-edit= link_to "#{t('edit_text')}", {:action => "edit_category", :id=>c.id}
        .category-edit= link_to "#{t('delete_text')}", {:action => "delete_category", :id=>c.id}, :confirm => "#{t('delete_confirm_msg')}"
        - unless c.status == false
          .category-edit= link_to_remote "#{t('inactivate')}", :url => {:action => "inactivate_category", :id => c.id}, |
              :confirm=>"#{t('inactivate_confirm')}",                                                       |
              :update => "category-list"                                                                    |
        - else
          .category-edit= link_to_remote "#{t('activate')}", :url => {:action => "activate_category", :id => c.id}, |
              :confirm=>"#{t('activate_confirm')}",                                                     |
              :update => "category-list"                                                                |
  - else
    %p.flash-msg= t('earnings_msg')
