#page-yield
  .box
    - form_remote_for @obs_group,:url=>{:controller=>"observation_groups",:id=>@obs_group.id,:action=>'update'} do |f|
      #form-errors
      = error_messages_for :obs_group
      .label-field-pair
        %label{:for => "category_name"} Name
        .text-input-bg= f.text_field :name
      .label-field-pair
        %label{:for => "category_name"} Header Name
        .text-input-bg= f.text_field :header_name
      .label-field-pair
        %label{:for => "category_name"} Description
        .text-input-bg= f.text_field :desc
      .label-field-pair
        %label{:for => "category_name"} CCE Grade Set
        .text-input-bg
          = f.select :cce_grade_set_id ,@grade_sets.map{|m| [m.name,m.id]} ,:prompt=>"Select a grade set",:selected=>@obs_group.try(:cce_grade_set_id).to_i
      .label-field-pair
        %label{:for => "category_name"} Type
        .text-input-bg
          = f.select :observation_kind ,@observation_kinds.map{|m| [m[1],m[0]]},:prompt=>"Select an assessment type"
      = f.submit "", :value => "â–º Update", :class => "submit_button"
    .extender
