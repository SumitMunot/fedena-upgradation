#content-header
  = image_tag("user_profile/user_profile_logo.jpg")
  %h1= t('create_user')
  %h3= t('make_new_admin_user')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  = form_for :user do |f|
    - @user.errors.full_messages.each do |msg|
      = msg
    #create_user_form
      #necessary-field-notification
        = t('legend1')
        %span.necessary-field *
        = t('legend2')
        (#{t('only_admin_user_can_created')})
      .label-field-pair
        %label{:for => "user_username"}
          = t('username')
          %span.necessary-field *
        .text-input-bg= f.text_field :username
      .label-field-pair
        %label{:for => "user_first_name"}
          = t('first_name')
          %span.necessary-field *
        .text-input-bg= f.text_field :first_name
      .label-field-pair
        %label{:for => "user_last_name"}= t('last_name')
        .text-input-bg= f.text_field :last_name
      .label-field-pair
        %label{:for => "user_password"}
          = t('password')
          %span.necessary-field *
        .text-input-bg= f.password_field :password
      .label-field-pair
        %label{:for => "user_email"}
          = t('email')
          %span.necessary-field *
        .text-input-bg= f.text_field :email
      = f.hidden_field :role, :value=>'Admin'
      .extender
      = submit_tag "", :value => "â–º#{t('create_text')}", :class => "user_submit_button"
