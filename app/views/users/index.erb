<div id="content-header">
  <%= image_tag("user_profile/user_profile_logo.jpg") %>
  <h1><%= t('manage_users') %></h1>
  <h3><%= t('detailed_about_user') %></h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png", border: 0), 'javascript
    :void(0);', onclick: "history.back()" %>
  </div>
</div>

<div id="inner-tab-menu">
  <ul>
    <li><%= link_to t('view_all'), action: :all %></li>
    <li><%= link_to t('add_new'), action: :create %></li>
  </ul>
</div>
<div id="page-yield">
  <div id="search-area">
    <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>
    <div id="searchbox">
      <form name="search-form" id="search-form">
        <label for="query"><%= t('search_user') %>
          <%= image_tag("loader.gif", align: :absmiddle, border: 0, id: :loader, style: "display: none;" ) %>
        </label>
        <%= text_field_tag "query", params[:query], autocomplete:  'off' %>
      </form>
    </div>
  </div>




<%#= observe_field 'query', :frequency => 0.5,
:update => 'user_information',
:url => { :action => 'search_user_ajax' },
:before => "Element.show('loader')",
:success => "Element.hide('loader')",
:with => 'query' %>

  <script type="text/javascript">
    function search_user_ajax(){
      if ($('query').value.include("%")) return;
      onChangeRequest($('query'), '<%= url_for(action: :search_user_ajax, query: "paramid") %>' );
      <%#="#{remote_function(:url => {:action => "search_user_ajax"},
      :with =>  "'query='+ $('query').value",
      :before => "Element.show('loader')",
      :success => "Element.hide('loader')",
      :update=>"user_information"
      )}"%>
    }

    jQuery(document).on("page:load ready", function() {
      new Form.Element.Observer('query', 1, search_user_ajax);
    });

  </script>

  <div id="user_information"> </div>

  <div class="extender"> </div>

</div>