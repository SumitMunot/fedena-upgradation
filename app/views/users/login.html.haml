#wrapper
  #top_logo
    = image_tag current_school_detail.logo.url
  #login_strip
  #login_area_bg
    = form_for :user, url: login_users_path do |form|
      #login_area
        %label{:for => "username"}= t('username')
        #username_textbox_bg
          = form.text_field :username, maxlength: 40
        %label{:for => "password"}= t('password')
        #password_textbox_bg
          = form.password_field :password
        #notice-box
          - if !flash.empty?
            #notice= flash[:notice]
        #submit_area
          = submit_tag t('login'), class: :submit
        %label.forgot_password_link{:for => "forgot_password"}
          = link_to t('forgot_password'), controller: :users, action: :forgot_password
  #help_forgot_pw
  .clearfooter
#footer
  #footer_logo
    #powered_by
      = t('powered_by')
      %a{:href => "<haml_loud"}
        "\#{FedenaSetting.company_details[:company_url]}"  target="_blank"&gt;#{FedenaSetting.company_details[:company_name]}
:javascript
  document.getElementById('user_username').focus();
