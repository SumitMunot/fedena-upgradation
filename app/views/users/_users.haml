- if @users.nil? or @users.empty?
  #user_no_result.themed_text= t('no_users')
- else
  .students-table
    %table#listing{:align => "center", :cellpadding => "1", :cellspacing => "1", :width => "100%"}
      %tr.tr-head
        %td= t('sl_no')
        %td= t('name')
        %td= t('username')
        %td
      %tr
        %td
        %td
        %td
        %td
      - @users.each_with_index do |user,i|
        %tr{:class => "tr-#{cycle('odd', 'even')}"}
          %td.col-1= i+1
          %td.col-2= user.full_name
          %td.col-3= user.username
          %td.col-4
            = link_to t('view_profile'), controller: :users, action: :profile, id: user.username
