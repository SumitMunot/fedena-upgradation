#content-header
  = image_tag("user_profile/user_profile_logo.jpg")
  %h1= t('all_users')
  %h3= t('details_about_user')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .all-user
    .label-field-pair
      .text-input-bg
        = select :user_type, :type, [[t('admin'),"Admin"], [t('employee_text'),"Employee"],[t('student_text'),"Student"],[t('parent'),"Parent"]], { prompt: t('select_a_role')}, { onChange: "onChangeRequest(this, '#{url_for(action: :list_user, user_type: 'paramid')}')"}
      = image_tag("loader.gif", align: :absmiddle, border: 0, id: :loader, style: "display: none;")
    #student_user
    #employee_user
  #users
