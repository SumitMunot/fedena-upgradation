- unless @grades.empty?
  %table{:align => "center", :cellpadding => "1", :cellspacing => "1", :width => "100%"}
    %tr.tr-head
      %td Grade
      %td Grade points
      %td
    %tr
      %td
      %td
    - @grades.each do |g|
      %tr{:class => "tr-#{cycle('odd', 'even')}"}
        %td.col-1
          = g.name
        %td.col-2
          = g.grade_point
        %td.col-3
          .category-edit
            = link_to_remote "#{t("edit_text")}", :url => { :action => 'edit_grade', :id => g.id }
            | #{link_to_remote "#{t("delete_text")}", :url => { :action => 'destroy_grade', :id => g.id},:confirm=>"Delete Grade #{g.name}?"}
- else
  #flash-box
    %p.flash-msg No grades  present
