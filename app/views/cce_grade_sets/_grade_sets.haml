.box
  %table{:align => "center", :cellpadding => "1", :cellspacing => "1", :width => "100%"}
    %tr.tr-head
      %td Grade Sets
      %td
    %tr
      %td
      %td
    - @grade_sets.each do |g|
      %tr{:class => "tr-#{cycle('odd', 'even')}"}
        %td.col-4
          = link_to g.name, cce_grade_set_path(g)
        %td.col-3
          .category-edit
            = link_to_remote "#{t("edit_text")}", :url => { :action => 'edit', :id => g.id },:method=>:get
            | #{link_to t("delete_text"),g,:method=>:delete,:confirm=>"Delete grade set #{g.name}?"}
