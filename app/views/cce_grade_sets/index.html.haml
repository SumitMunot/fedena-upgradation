- content_for :head do
  = stylesheet_link_tag("observation_groups/show.css")
#content-header
  = image_tag("examination/show_exam.png")
  %h1 CCE Grade Sets
  %h3 Home
  #app-back-button
    = back_button
#inner-tab-menu
  %ul
    %li= link_to_remote "New", :url => { :action => 'new'}
#page-yield
  - unless flash[:warn_notice].nil?
    #errorExplanation.errorExplanation
      %ul
        %li= flash[:warn_notice]
  #flash-box
    - unless flash[:notice].nil?
      %p.flash-msg
        = flash[:notice]
  #grade_sets
    = render  :partial=>'grade_sets'
  #modal-box{:style => "display:none;"}
