#grading-levels-form
  %h4= @batch.full_name unless @batch.nil?
  - form_remote_for @subject,:url=>{:action=>'create_subject'} do |f|
    - batch_id = (@batch.nil? ? nil : @batch.id)
    - elective_group_id = (@elective_group.nil? ? nil : @elective_group.id)
    = f.hidden_field :batch_id, :value => batch_id
    = f.hidden_field :elective_group_id, :value => elective_group_id
    #form-errors
    .label-field-pair
      .label-container= f.label "#{t('name')}"
      .input-container
        = f.text_field :name
    .label-field-pair
      .label-container
        = f.label "#{t('code')}"
      .input-container= f.text_field :code
    .label-field-pair
      .label-container= f.label "#{t('max_weekly_class')}"
      .input-container
        = f.text_field :max_weekly_classes
    - if @batch and (@batch.cwa_enabled? or @batch.gpa_enabled?)
      .label-field-pair
        .label-container
          %label Credit Hours
        .input-container
          = f.text_field :credit_hours
    .label-field-pair
      .label-container= f.label "#{t('no_exam')}"
      .input-container= f.check_box :no_exams
    = f.submit  "", :value => "â–º #{t('save')}", :class => "submit_button"
