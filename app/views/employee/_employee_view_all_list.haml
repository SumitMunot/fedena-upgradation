%table#listing{:width => "100%"}
  %tr.tr-head
    %td= t('name')
    %td= t('employee_number')
    %td= t('department')
  - @employees.each do |e|
    %tr{:class => "tr-#{cycle('odd','even')}"}
      %td.col-3= link_to "#{e.full_name}", :controller=>"employee", :action=>"profile", :id=>e.id
      %td.col-3= e.employee_number
      %td.col-3= e.employee_department.name
