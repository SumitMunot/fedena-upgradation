#content-header
  = image_tag("HR/show_hr.png")
  %h1= t('employee_text')
  %h3= t('change_reporting_manager')
  #app-back-button
    = back_button
:javascript
  function update_reporting_manager(id) { $('employee_reporting_manager_id').value = id; }
#page-yield
  %p.flash-msg
    = t('below_listed_employees')
  #list_content
    #list
      - @associate_employee.each do |b|
        %div{:class => "name_list#{cycle('odd', 'even')}"}
          %li
            .att_list_name
              = b.full_name
            .att_list_number= b.employee_number
  #form-content
    = form_for :employee do |e|
      #current-changed-manager
        #changed-manager-outer
          #changed-manager
            = t('selected_new_manager')
                             :
          #changed-manager-name
            %span.not-selected
              (#{t('not_selected')})
          #update-button= submit_tag("► #{t('save_and_proceed')}")
          .extender
      = e.hidden_field :reporting_manager_id
    #search-options
      #search-outer
        #search-label
          = t('search_by_name')
                      :
        #search-text-box= text_field_tag("query", params['query'], :autocomplete => 'off')
        = image_tag("loader.gif",      |
          :align => "absmiddle",       |
          :border => 0,                |
          :id => "loader",             |
          :style => "display: none;" ) |
        .extender
      = observe_fields ['employee_reporting_manager_id'], |
        :frequency => 0.1,                                |
        :update => 'changed-manager-name',                |
        :url=> {:action=>'update_reporting_manager_name'} |
      #advanced-options
        .employee-search-options= select :employee, :department_id, @departments.map {|s| [s.name, s.id]}, :prompt => "#{t('select_department')}"
        .employee-search-options= select :employee, :category_id,   @categories.map {|s| [s.name, s.id]},  :prompt => "#{t('select_category')}"
        .employee-search-options= select :employee, :position_id,   @positions.map {|s| [s.name, s.id]},   :prompt => "#{t('select_position')}"
        .employee-search-options= select :employee, :grade_id,      @grades.map {|s| [s.name, s.id]},      :prompt => "#{t('select_grade')}"
        .extender
    = observe_fields ['query', 'employee_department_id','employee_category_id', 'employee_position_id', 'employee_grade_id'], |
      :frequency => 0.1,                                                                                                      |
      :update => 'information',                                                                                               |
      :before => "Element.show('loader')",                                                                                    |
      :success => "Element.hide('loader')",                                                                                   |
      :url => {:action => 'select_reporting_manager'}                                                                         |
  #information
