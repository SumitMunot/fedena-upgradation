<div id="content-header">
  <%= image_tag("  HR/show_hr.png") %>
<h1><%= t('employee_admission') %></h1>
<h3><%= t('step_2') %></h3>
<div id="app-back-button">
<%= link_to_function image_tag("buttons/back.png",:border => 0), "history.back()" %>
</div>
</div>

<div id="page-yield">

<% unless flash[:notice].nil? %>
<p class="flash-msg"> <%= flash[:notice] %> </p>
<% end %>


<%= form_for :employee do |a| %>
  <%= error_messages_for 'employee' %>
    <div id="form-contents">
        <span class="span-sub-heading"><%= t('home_address') %></span>
    <hr class="sub-heading"></hr>

        <div class="label-field-pair">
          <label><%= t('line_1') %></label>
          <div class="text-input-bg"><%= a.text_field :home_address_line1 %></div>
          <div class="extender"></div>
        </div>
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <label><%= t('line_2') %></label>
          <div class="text-input-bg"><%= a.text_field :home_address_line2 %></div>
          <div class="extender"></div>
        </div>
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <label><%= t('city') %></label>
          <div class="text-input-bg"><%= a.text_field :home_city %></div>
          <div class="extender"></div>
        </div>
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <label><%=  t('state')  %></label>
          <div class="text-input-bg"><%= a.text_field :home_state %></div>
          <div class="extender"></div>
        </div>
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <label><%=  t('country')  %></label>
          <div class="text-input-bg"><%= select :employee, :home_country_id, @countries.map {|c| [c.name, c.id]}, :selected => @employee.home_country_id || @selected_value.to_i %></div>
          <div class="extender"></div>
        </div>
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <label><%=  t('zip')  %></label>
          <div class="text-input-bg"><%= a.text_field :home_pin_code %></div>
          <div class="extender"></div>
        </div>
      <br/>
        <span class="span-sub-heading"><%= t('office_address') %></span>
      <hr class="sub-heading"></hr>

        <div class="label-field-pair">
          <label><%= t('line_1') %></label>
          <div class="text-input-bg"><%= a.text_field :office_address_line1 %></div>
          <div class="extender"></div>
        </div>
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <label><%= t('line_2') %></label>
          <div class="text-input-bg"><%= a.text_field :office_address_line2 %></div>
          <div class="extender"></div>
        </div>
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <label><%= t('city') %></label>
          <div class="text-input-bg"><%= a.text_field :office_city %></div>
          <div class="extender"></div>
        </div>
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <label><%= t('state') %></label>
          <div class="text-input-bg"><%= a.text_field :office_state %></div>
          <div class="extender"></div>
        </div>
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <label><%= t('country') %></label>
          <div class="text-input-bg"><%= select :employee, :office_country_id, @countries.map {|c| [c.name, c.id]}, :selected => @employee.office_country_id || @selected_value.to_i %></div>
          <div class="extender"></div>
        </div>
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <label><%= t('zip') %></label>
          <div class="text-input-bg"><%= a.text_field :office_pin_code %></div>
          <div class="extender"></div>
        </div>
      <br/>
        <span class="span-sub-heading"><%= t('contact_details') %></span>
    <hr class="sub-heading"></hr>

        <div class="label-field-pair">
          <label><%= t('office_phone1') %></label>
          <div class="text-input-bg"><%= a.text_field :office_phone1 %></div>
          <div class="extender"></div>
        </div>
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <label><%= t('office_phone2') %></label>
          <div class="text-input-bg"><%= a.text_field :office_phone2 %></div>
          <div class="extender"></div>
        </div>
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <label><%= t('mobile') %></label>
          <div class="text-input-bg"><%= a.text_field :mobile_phone %></div>
          <div class="extender"></div>
        </div>
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <label><%= t('home_phone') %></label>
          <div class="text-input-bg"><%= a.text_field :home_phone %></div>
          <div class="extender"></div>
        </div>
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <label><%= t('fax') %></label>
          <div class="text-input-bg"><%= a.text_field :fax %></div>
          <div class="extender"></div>
        </div>
    </div>

  <div class="save-proceed-button">
    <%= submit_tag "â–º #{t('save_and_proceed')}" %>
  </div>
<% end %>

</div>
