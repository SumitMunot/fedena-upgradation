#content-header
  = image_tag("HR/show_hr.png")
  %h1= t('edit_employee_information')
  %h3= t('bank_detail')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  = form_for :employee_bank_details,:id => @employee.id do |a|
    = error_messages_for 'employee_bank_details'
    %span.span-sub-heading= t('bank_info')
    %hr.sub-heading/
    - @bank_fields.each do |bd|
      - @employee_bank_detail = EmployeeBankDetail.find_by_employee_id_and_bank_field_id(@employee.id,bd.id)
      .label-field-pair
        %label= bd.name
        .text-input-bg= a.text_field :bank_info,:index => bd.id,:value=>(@employee_bank_detail.nil? ? "" : @employee_bank_detail.bank_info)
        .extender
      %hr.label-underline/
    .save-proceed-button
      = submit_tag "â–º #{t('save_and_proceed')}"
