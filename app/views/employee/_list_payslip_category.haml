%ul.payslip_category_list
  - @new_payslip_category.each do |c|
    %li.new_category
      .name= c.name
      .val.themed_text
        %span :
        = c.amount
      .del-button
        = link_to image_tag("buttons/delete-new.png", :alt=>'Delete', :border => 0), { :action => "remove_new_paylist_category", :id => c.id, :id3=>CGI::unescape(@salary_date) }, :update => "list-payslip-category", :confirm=>"#{t('delete_confirm_msg')}", :remote => true, method: :DELETE
  - @individual.each do |c|
    %li.new_category
      .name= c.name
      .val.themed_text
        %span :
        = c.amount
      .del-button
        = link_to image_tag("buttons/delete-new.png", :alt=>'Delete', :border => 0),  { :action => "remove_new_paylist_category", :id => c.id, :id3 =>CGI::unescape(@salary_date) }, :update => "list-payslip-category", :confirm=>"#{t('delete_confirm_msg')}" , :remote => true, method: :DELETE
