= javascript_include_tag :application
#content-header
  = image_tag("HR/show_hr.png")
  %h1
    = t('rejected_payslip')
  %h3= t('individual_employee')
  #app-back-button
    = back_button
#page-yield
  .bread_crumb
    = link_to t('hr'), :controller => "employee", :action=>"hr"
    »
    \#{link_to t('create_payslip'), :controller => "employee", :action=>"payslip"} »
    \#{link_to t('rejected_payslip'), :controller => "employee", :action=>"rejected_payslip"} »
    \#{@emp.full_name}
  .drop-down-box
    %label{:for => "category_prefix"}= t('select_payslip_month_year')
    .text-input-bg
      = select :employee, :rejected_payslip, @payslips.map { |s| [s.salary_date.strftime("%B %Y"), s.salary_date] }, {:prompt => "#{t('select_a_month')}"}, {:onChange => "onChangeRequest(this, '#{url_for(action: :update_rejected_payslip, salary_date: 'paramid', emp_id: params[:id])}')"}
  .extender
  #rejected_payslip
