= javascript_include_tag :application
#content-header
  = image_tag("HR/show_hr.png")
  %h1= t('rejected_payslip')
  %h3= t('department_wise_payslip')
  #app-back-button
    = back_button
#page-yield
  .bread_crumb
    = link_to t('hr'), :controller => "employee", :action=>"hr"
    »
    \#{link_to t('create_payslip'), :controller => "employee", :action=>"payslip"} »
    \#{t('rejected_payslip')}
  .drop-down-box
    %label{:for => "category_prefix"}= t('select_a_department')
    .text-input-bg
      = select :individual_payslip, :department_id, @departments.map { |s| [s.name, s.id] },{:prompt => "#{ t('select_a_department')}"}, onChange: "onChangeRequest(this, '#{url_for(action: :update_rejected_employee_list, department_id: 'paramid')}')" 
  .extender
  #employees_select_list
