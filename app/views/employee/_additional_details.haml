%table{:width => "700"}
  - unless @additional_details.empty?
    - @additional_details.each do |b|
      - code = cycle('even', 'odd')
      %tr{:class => "#{code} left"}
        %td= b.additional_field.name
        %td.right= b.additional_info
.extender
.edit-pdf-group
  - if permitted_to? :admission3_1,:employee
    %div
      = link_to "► #{t('edit_text')}",   {:controller => "employee", :action => "admission3_1", :id =>@employee.id, :edit_request=>1 }, :class=> 'user_button'
  - if permitted_to?  :profile_pdf , :employee
    %div
      = link_to " ► #{t('pdf_report')}",                                                                                       |
        {:controller => "employee", :action => "profile_pdf", :id => @employee.id},:target => '_blank', :class=> 'user_button' |
- else
  - if permitted_to? :admission3_1,:employee
    %p.flash-msg
      = t('no_additional_details_entered')
      = @employee.first_name
      \. #{link_to "#{t('add')}", :controller => "employee", :action => "admission3_1", :id => @employee.id, :edit_request=>1}
  - else
    %p.flash-msg
      = t('no_additional_details_entered')
      = @employee.first_name
      \.
