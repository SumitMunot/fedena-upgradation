#content-header
  = image_tag("  HR/show_hr.png")
  %h1= "#{t('employee_settings')}"
  %h3= "#{t('add_grade')}"
  #app-back-button
    = back_button
#page-yield
  .box
    .bread_crumb
      = link_to t('hr_text'), controller: :employee, action: :hr
      »
      \#{link_to t('hr_setting'), controller: :employee, action: :settings} »
      \#{t('add_grade')}
    - unless flash[:warn_notice].nil?
      #errorExplanation1
        %ul
          %li
            = flash[:warn_notice]
    = form_for :grade do |c|
      - unless flash[:notice].nil?
        %p.flash-msg
          = flash[:notice]
      = error_messages_for 'grade'
      #form-content
        .label-field-pair
          %label{:for => "grade_name"}= t('name')
          .text-input-bg
            = c.text_field :name
        .label-field-pair
          %label{:for => "grade_priority"}= t('priority')
          .text-input-bg
            = c.text_field :priority
        .label-field-pair
          %label{:for => "grade_priority"}= t('max_period_per_day')
          .text-input-bg
            = c.text_field :max_hours_day
        .label-field-pair
          %label{:for => "grade_priority"}= t('max_period_per_week')
          .text-input-bg
            = c.text_field :max_hours_week
        .label-checkbox-pair
          %label.status{:for => "status"}= t('status')
          #radio-buttons
            = c.radio_button  "status", "true", :checked => "checked"
            %label.label_for_status{:for => "grade_status_true"}= t('active')
            = c.radio_button  "status", "false"
            %label.label_for_status{:for => "grade_status_false"}= t('inactive')
        #submit-button
          = submit_tag("► #{t('create_text')}")
    #grade-list
      = render :partial => "grade"
