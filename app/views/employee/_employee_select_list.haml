%ul#employee-list
  - unless @employees.empty?
    %li.heading= t('employee_name')
    - @employees.each do |e|
      %li{:class => "list#{cycle('even','odd')}"}
        .employee-name= link_to "#{e.first_name} #{e.last_name} (#{e.employee_number})", :controller=>"employee", :action=>"create_monthly_payslip", :id=>e.id
  - else
    %p.flash-msg= t('flash43')
