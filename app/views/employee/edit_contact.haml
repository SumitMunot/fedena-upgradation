#content-header
  = image_tag("HR/show_hr.png")
  %h1= t('edit_employee_information')
  %h3= t('contact')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  = form_for :employee do |a|
    = error_messages_for 'employee'
    %span.span-sub-heading= t('contact_details')
    %hr.sub-heading/
    .label-field-pair
      %label= t('office_phone1')
      .text-input-bg= a.text_field :office_phone1
      .extender
    %hr.label-underline/
    .label-field-pair
      %label= t('office_phone2')
      .text-input-bg= a.text_field :office_phone2
      .extender
    %hr.label-underline/
    .label-field-pair
      %label= t('mobile')
      .text-input-bg= a.text_field :mobile_phone
      .extender
    %hr.label-underline/
    .label-field-pair
      %label= t('home_phone')
      .text-input-bg= a.text_field :home_phone
      .extender
    %hr.label-underline/
    .label-field-pair
      %label= t('fax')
      .text-input-bg= a.text_field :fax
      .extender
    .save-proceed-button
      = submit_tag "â–º #{t('update')}"
