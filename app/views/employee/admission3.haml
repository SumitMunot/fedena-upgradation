#content-header
  = image_tag("HR/show_hr.png")
  %h1= t('employee_admission')
  %h3= t('step_3')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  = form_for(:employee_bank_details, :url => {:id => @employee.id}) do |a|
    = error_messages_for 'employee_bank_details'
    #form-contents
      %span.span-sub-heading= t('add_bank_detail')
      %hr.sub-heading/
      - @bank_fields.each do |bd|
        .label-field-pair
          %label= bd.name
          .text-input-bg= a.text_field :bank_info,:index => bd.id
          .extender
        %hr.label-underline/
    .save-proceed-button
      = submit_tag "â–º #{t('save_and_proceed')}"
