= javascript_include_tag :application
#content-header
  = image_tag("HR/show_hr.png")
  %h1= t('monthly_payslip')
  %h3= t('create_text')
  #app-back-button
    = back_button
#page-yield
  .bread_crumb
    = link_to t('hr'), :controller => "employee", :action=>"hr"
    »
    \#{link_to t('create_payslip'), :controller => "employee", :action=>"payslip"} »
    \#{link_to t('individual_employee'), :controller => "employee", :action=>"select_department_employee"} »
    \#{@employee.full_name}
  #employee_profile_heading
    #employee_main_info
      %h3
        = @employee.full_name
      %h4
        = t('employee_id')
        \: #{@employee.employee_number}
    .extender
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  - unless flash[:warn_notice].nil?
    #errorExplanation.errorExplanation
      = flash[:warn_notice]
  #form-content
    = form_for(:manage_payroll, :url => {:id => @employee.id} ) do |s|
      .payslip-field-pair
        %label{:for => "salary_date"}= t('salary_date')
        .payslip-input-bg
          = date_select 'salarydate', I18n.l(Date.today,:format=>:default),:year_range => 2.years.ago..0.years.from_now
      - @independent_categories.each do |c|
        - val = EmployeeSalaryStructure.find_by_employee_id_and_payroll_category_id(@employee, c)
        .payslip-field-pair
          %label{:for => "payroll_category_name"}= c.name
          .payslip-input-bg= s.text_field :amount, :index => c.id, :value => (val.nil? ? 0 : val.amount), :onChange=> "onChangeRequest(this, '#{url_for(:controller=>"payroll",:action => "update_dependent_fields" , :cat_id => c.id)};)"
      - @dependent_categories.each do |c|
        - val = EmployeeSalaryStructure.find_by_employee_id_and_payroll_category_id(@employee, c)
        .payslip-field-pair
          %label{:for => "payroll_category_name"}= c.name
          .payslip-input-bg= s.text_field :amount, :index => c.id, :value => (val.nil? ? 0 : val.amount),:onChange=> "onChangeRequest(this, '#{url_for(:controller=>"payroll",:action => "update_dependent_fields" , :cat_id => c.id)};)"
      #submit-button
        = submit_tag("► #{t('create_text')}")
      .extender
  #individual-payslip-categories
    #individual-payslip-categories-list
      = render :partial => "payslip_category_list", :locals => {:emp_id => @employee.id, :salary_date=>@salary_date}
      / div id="payslip-category-form"> </div
  .extender
