%table{:width => "700"}
  %tr.odd.left
    %td= t('date_of_birth')
    %td.right= @employee.date_of_birth
  %tr.even.left
    %td= t('marital_status')
    %td.right= @employee.marital_status
  %tr.odd.left
    %td= t('no_of_children')
    %td.right= @employee.children_count
  %tr.even.left
    %td= t('father_name')
    %td.right= @employee.father_name
  %tr.odd.left
    %td= t('mother_name')
    %td.right= @employee.mother_name
  %tr.even.left
    %td= t('spouse_name')
    %td.right= @employee.husband_name
  %tr.odd.left
    %td= t('blood_group')
    %td.right= @employee.blood_group
  %tr.even.left
    %td= t('nationality')
    %td.right= @employee.nationality.name unless @employee.nationality.nil?
