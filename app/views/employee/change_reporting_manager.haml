#content-header
  = image_tag("HR/show_hr.png")
  %h1= t('reporting_manager')
  %h3= t('change')
  #app-back-button
    = back_button
:javascript
  function update_reporting_manager(id) {
    $('employee_reporting_manager_id').value = id;
  }
#page-yield
  #form-content
    = form_for :employee do |e|
      #current-changed-manager
        #current-manager-outer
          #current-manager
            = t('current_manager')
                       :
          #current-manager-name.themed_text= @reporting_manager
          .extender
        #changed-manager-outer
          #changed-manager
            = t('new_manager')
                             :
          #changed-manager-name.themed_text
            %span.not-selected
              (#{t('not_selected')})
          #update-button= submit_tag "► #{t('save')}",:class=>"submit_button"
          .extender
      = e.hidden_field :reporting_manager_id
    #search-options
      #search-outer
        #search-label
          = t('search_by_name')
                      :
        #search-text-box= text_field_tag("query", params['query'], :autocomplete => 'off')
        = image_tag("loader.gif",      |
          :align => "absmiddle",       |
          :border => 0,                |
          :id => "loader",             |
          :style => "display: none;" ) |
        .extender
      = observe_fields ['employee_reporting_manager_id'], |
        :frequency => 0.1,                                |
        :update => 'changed-manager-name',                |
        :url=> {:action=>'update_reporting_manager_name'} |
      #advanced-options
        .employee-search-options= select :employee, :department_id, @departments.map {|s| [s.name, s.id]}, :prompt => "#{t('select_department')}"
        .employee-search-options= select :employee, :category_id,   @categories.map {|s| [s.name, s.id]},  :prompt => "#{t('select_category')}"
        .employee-search-options= select :employee, :position_id,   @positions.map {|s| [s.name, s.id]},   :prompt => "#{t('select_position')}"
        .employee-search-options= select :employee, :grade_id,      @grades.map {|s| [s.name, s.id]},      :prompt => "#{t('select_grade')}"
        .extender
    :javascript
      function search_ajax(){
            if ($('query').value.include("%")) return;
      #{"\#{remote_function(:url => {:action => "select_reporting_manager"},
      :with =>  "'query='+ $('query').value + '&employee_department_id='+$('employee_department_id').value + '&employee_category_id='+$('employee_category_id').value + '&employee_position_id='+$('employee_position_id').value + '&employee_grade_id='+$('employee_grade_id').value",
      :before => "Element.show('loader')",
      :success => "Element.hide('loader')",
      :update=>"information"
      )}"}
      }

      document.observe("dom:loaded", function() {
        new Form.Element.Observer('query', 1, search_ajax);
        new Form.Element.Observer('employee_department_id', 0.1, search_ajax);
        new Form.Element.Observer('employee_category_id', 0.1, search_ajax);
        new Form.Element.Observer('employee_position_id', 0.1, search_ajax);
        new Form.Element.Observer('employee_grade_id', 0.1, search_ajax);
      });
  #information
