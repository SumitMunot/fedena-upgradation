%table#listing{:align => "center", :cellpadding => "1", :cellspacing => "1", :width => "100%"}
  - unless @employee.blank?
    %tr.tr-head
      %td
        = t('sl_no')
      %td
        = t('employee_name')
      %td
        = t('employee_id')
      %td
        = t('employee_department')
    %tr.tr-blank
    - @employee.each_with_index do |emp1, i|
      %tr{:class => "tr-#{cycle('odd', 'even')}"}
        %td.col-1= i+1
        %td.col-4= link_to emp1.full_name, '#', :onclick=>"update_reporting_manager(#{emp1.id})"
        %td.col-3= emp1.employee_number
        %td.col-4= emp1.employee_department.name
  - else
    %tr{:class => "tr-#{cycle('odd', 'even')}"}
      %td.col-2= t('no_employee_found')
