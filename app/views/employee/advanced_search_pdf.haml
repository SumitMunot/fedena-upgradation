#page-yield.available_sections1
  .page1
  .section1.row
    %center
      .hor_line
      %h2= t('employee_search_report')
      .hor_line
      #main_info
        %h4
          = "#{t('employee_text')} "+@searched_for.camelcase unless @searched_for.nil?
  #table-headers.section1.row
    %center
      %table#pdf-table{:cellspacing => "0", :width => "100%"}
        %tr.table-header
          %td.col-pdf.name= t('name')
          %td.col-pdf.e_dept= t('department')
          %td.col-pdf.e_no= t('employee_number')
          %td.col-pdf.j_date= t('joining_date')
  - @employees1.each do |employee1|
    - c =cycle('even','odd ')
    .section1.row
      %center
        %table#pdf-table{:cellspacing => "0", :width => "100%"}
          %tr{:class => "#{c}"}
            %td.col-pdf.name= employee1.first_name
            %td.col-pdf.e_dept= employee1.employee_department.name
            %td.col-pdf.e_no= employee1.employee_number
            %td.col-pdf.j_date= I18n.l(employee1.joining_date,:format=>"%d %b, %Y")
  - unless @employees2.nil?
    - @employees2.each do |employee2|
      - c =cycle('even','odd ')
      .section1.row
        %center
          %table#pdf-table{:cellspacing => "0", :width => "100%"}
            %tr{:class => "#{c}"}
              %td.col-pdf.name= employee2.first_name
              %td.col-pdf.e_dept= employee2.employee_department.name
              %td.col-pdf.e_no= employee2.employee_number
              %td.col-pdf.j_date= I18n.l(employee2.joining_date,:format=>"%d %b, %Y")
