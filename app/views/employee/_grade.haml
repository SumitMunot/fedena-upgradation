%ul#grade-list
  - unless @grades.empty?
    %li.listheading
      .grade-name= "#{t('active_grade')}"
    - @grades.each do |g|
      %li{:class => "list#{cycle('odd', 'even')}"}
        .grade-name
          = g.name
          (#{g.priority})
        .grade-edit= link_to "#{t('edit_text')}", :action => "edit_grade", :id=>g.id
        .grade-edit= link_to "#{t('delete_text')}", {:action => "delete_grade", :id=>g.id}, :confirm => "#{t('delete_confirm_msg')}"
    - unless @inactive_grades.empty?
      %li.listheading
        .grade-name= "#{t('inactive_grade')}"
      - @inactive_grades.each do |c|
        %li{:class => "list#{cycle('odd', 'even')}"}
          .grade-name
            = c.name
            (#{c.priority})
          .grade-edit= link_to "#{t('edit_text')}", {:action => "edit_grade", :id=>c.id}
          .grade-edit= link_to "#{t('delete_text')}", {:action => "delete_grade", :id=>c.id},:confirm=>"#{t('delete_confirm_msg')}"
  - else
    %p.flash-msg
      = t('no_employee_grades_record_found')
