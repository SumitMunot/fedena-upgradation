      </div>

      <div class="label-field-pair">
        <label for="category_name"><%= t('leave_taken') %></label>
        <div class="text-bg"><%= @leave_count.leave_taken %></div>
      </div>

      <div id="submit-button">
          <%=submit_tag("â–º #{t('save')}") %>
      </div>


    </div>
  <%end%>
