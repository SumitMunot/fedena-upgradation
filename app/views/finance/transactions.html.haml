#content-header
  = image_tag("show_finance.png")
  %h1= t('finance_transactions')
  %h3= t('expences_n_income')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg= flash[:notice]
  .box
    .link-box
      .link-heading= link_to "#{t('add_expense')}", :action => "expense_create"
      .link-descr= t('create_new_expense')
    .link-box
      .link-heading= link_to "#{t('add_income')}", :action => "income_create"
      .link-descr= t('create_new_income')
    .link-box
      .link-heading= link_to "#{t('report')}", :action => "monthly_report"
      .link-descr= t('show_transactions')
    .link-box
      .link-heading= link_to "#{t('compare_transactions')}", :action => "compare_report"
      .link-descr= t('compare_transactions')
