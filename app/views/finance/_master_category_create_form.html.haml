%label.head_label
  = t('create_master_category_for_fees')
  %span
#grading-levels-form
  = form_for @finance_fee_category, url: { action: :master_category_create}, remote: true do |f|
    #form-errors
    .label-field-pair
      .label-container= f.label t('name')
      .input-container= f.text_field :name
    .label-field-pair
      .label-container= f.label t('description')
      .input-container= f.text_field :description
    .label-field-pair
      .label-container
        %label
          = t('select_a_batch')
          \:
      .batches
        .sel-list
          = t('select')
          = select_all
          = select_none
        - @batches.each do |f|
          .each_batch
            = check_box_tag "finance_fee_category[batch_id][]", f.id
            %label= f.full_name
    = submit_tag "â–º #{t('save')}", class: :submit_button
