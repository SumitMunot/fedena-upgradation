#content-header
  = image_tag("show_finance.png")
  %h1= t('expenses')
  %h3= t('expenses_list')
  #app-back-button
    = back_button
#page-yield
  .box
    - unless flash[:notice].nil?
      %p.flash-msg= flash[:notice]
    - unless flash[:warn_notice].nil?
      #errorExplanation.errorExplanation
        %p= flash[:warn_notice]
    = form_for :report, :url => {:action => 'expense_list_update'} do |form|
      .label-field-pair
        %label
          = t('select_start_date')
          \:
        .input-container= calendar_date_select_tag 'start_date', I18n.localize(Date.today, :format=>:default),:popup=>:force
      .label-field-pair
        %label
          = t('select_end_date')
          \:
        .input-container= calendar_date_select_tag 'end_date', I18n.localize(Date.today,:format=>:default),:popup=>:force
      = submit_tag "â–º #{t('ok')}",:class=>'submit_button'
    #expense_list
