    #message
    .link-box
      .link-heading= link_to "#{t('create_fee_collection')}", :action => 'fee_collection_new'
      .link-descr
        = t('creates_new_fee_collecting_dates')
    .link-box
      .link-heading= link_to "#{t('view')}",:action => "fee_collection_view"
      .link-descr= t('displays_collection_dates')
