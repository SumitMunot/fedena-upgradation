#content-header
  = image_tag("show_finance.png")
  %h1= t('donations')
  %h3= t('add_new_donation')
  #app-back-button
    = back_button
#inner-tab-menu
  %ul
    %li= link_to "#{t('donors')}", :action => "donors"
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg= flash[:notice]
  .box
    = error_messages_for :donation
    = form_for :donation do |f|
      #create_user_form
        .label-field-pair
          %label{:for => "donor_name"}
            = t('donor_name')
            \:
          .text-field-bg= f.text_field :donor
        .label-field-pair
          %label{:for => "description"}
            = t('description')
            \:
          .text-field-bg= f.text_field :description
        .label-field-pair
          %label{:for => "description"}
            = t('transaction_date')
            \:
          .text-field-bg= calendar_date_select_tag 'donation[transaction_date]', I18n.l(Date.today,:format=>:default), :year_range => 5.years.ago..0.years.ago
        .label-field-pair
          %label{:for => "amount"}
            = t('amount')
            \:
          .text-field-bg= f.text_field :amount
        = submit_tag "â–º #{t('add')}",:class=>'submit_button'
