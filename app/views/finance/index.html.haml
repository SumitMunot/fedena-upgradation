#content-header
  = image_tag("show_finance.png")
  %h1= t('finance_text')
  %h3= t('manage_finance')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg= flash[:notice]
  .box
    .link-box
      .link-heading
        = link_to "#{t('fees_text')}", :action => "fees_index"
      .link-descr= t('manage_fees')
    .link-box
      .link-heading
        = link_to "#{t('category')}", :action => "categories"
      .link-descr= t('manage_category')
    .link-box
      .link-heading
        = link_to "#{t('transactions')}", :action => "transactions"
      .link-descr= t('manage_expense_and_income')
    .link-box
      .link-heading= link_to "#{t('donations')}", :action => "donation"
      .link-descr= t('creates_new_donations')
    .link-box
      .link-heading= link_to "#{t('automatic_transactions')}", :action => "automatic_transactions"
      .link-descr= t('add_automatic_transactions')
    - unless @hr.nil?
      .link-box
        .link-heading= link_to "#{t('payslip_text')}", :action => "payslip_index"
        .link-descr= t('employee_payslips')
    .link-box
      .link-heading= link_to "#{t('asset_liability_management')}", :action => "asset_liability"
      .link-descr
        = t('asset_liability')
        = t('management')
