<div id="content-header">
  <%= image_tag("  show_finance.png") %>
  <h1><%= t('create_fees') %></h1>
  <h3><%= t('creates_master_fees_and_additional_fees') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("  buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
  <div class="bread_crumb">
    <%= link_to t('finance_text'), :controller => "finance", :action=>"index" %> &raquo;
    <%= link_to "#{t('fees_text')}", :controller => "finance", :action => "fees_index" %> &raquo;
    <%= t('create_fees') %>
  </div>
  <div class="box">

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('master_fees')}", :action => "master_fees" %></div>
      <div class="link-descr"><%= t('create_master_fees') %></div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('additional_fees')}", :action => "additional_fees" %></div>
      <div class="link-descr"><%= t('create_additional_fees') %></div>
    </div>


  </div>
</div>
