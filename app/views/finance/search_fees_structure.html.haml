- if @students_result.nil? or @students_result.empty?
  #no_result= t('no_users')
- else
  - @students_result.each_with_index do |r,i|
    = '<div class="students-on-one-line">' if i%4 == 0
    #ajax_result
      - link_value = r.full_name
      = link_to link_value, :controller => "finance", :action => "fees_structure_dates", :id => r.id
      %br/
      %small
        = t('course')
        \: #{r.batch.name}
      %small
        %br/
        = t('adm_no')
        \.#{r.admission_no}
      = @st.to_s
    = '</div>' if i%4 == 3
