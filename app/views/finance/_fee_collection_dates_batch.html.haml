- unless @finance_fee_collections.blank?
  #fee-collections-list
    %table#listing
      %tr.tr-head
        %td= t('name')
        %td= t('start_date')
        %td= t('end_date')
        %td= t('due_date')
        %td
      - @finance_fee_collections.each do |f|
        %tr{:class => "tr-#{cycle('odd', 'even')}"}
          %td.col-2= link_to "#{f.name}" ,:action=>:collection_details_view, :id=>f.id
          %td.col-3= f.start_date
          %td.col-3= f.end_date
          %td.col-3= f.due_date
          %td.col-1
            .edit= link_to_remote t('edit_text'), :url => {:action => 'fee_collection_edit', :id => f.id}
            - unless f.check_fee_category == false
              .delete= link_to_remote t('delete_text'), :url => {:action => 'fee_collection_delete', :id => f.id },:confirm=>"#{t('delete_confirm_msg')}"
- else
  %p.flash-msg= t('no_fee_collection_exist')
