#content-header
  = image_tag("show_finance.png")
  %h1= t('fee_collection_dates')
  %h3= t('view_fee_collection_dates')
  #app-back-button
    = back_button
#page-yield
  .box
    %br/
    .name= t('fee_collection_name')
    .val.themed_text
      %span :
      = @fee_collection.name
    .name= t('fee_category_name')
    .val.themed_text
      %span :
      = @fee_category.name
    .name= t('start_date')
    .val.themed_text
      %span :
      = @fee_collection.start_date
    .name= t('end_date')
    .val.themed_text
      %span :
      = @fee_collection.end_date
    .name= t('due_date')
    .val.themed_text
      %span :
      = @fee_collection.due_date
    %br/
    %br/
    - total_fees =0
    #fees-table
      .fees-th
        .fees-table-particulars= t('particulars')
        .fees-table-amount= t('amount')
      - unless @fee_particulars.nil?
        - @fee_particulars.each do |fee|
          .fees-tr
            .fees-table-particulars= fee.name
            .fees-table-amount= fee.amount
            - total_fees += fee.amount
      .fees-tr
        .fees-table-particulars
          %b= t('total_fees')
        .fees-table-amount
          %b= total_fees
