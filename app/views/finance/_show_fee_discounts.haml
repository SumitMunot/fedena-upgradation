- unless @discounts.blank?
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  %table#listing
    %tr.tr-head
      %td= t('name')
      %td= t('student_category')
      %td= t('student_name')
      %td
        = t('discount')
        (%)
      - if @discount_edit
        %td
    - @discounts.each do |f|
      %tr{:class => "tr-#{cycle('odd', 'even')}"}
        %td.col-3= f.name
        - if f.type == "StudentCategoryFeeDiscount"
          %td.col-3= f.category_name
          %td.col-3
        - elsif f.type == "StudentFeeDiscount"
          %td.col-3
          %td.col-3= f.student_name
        - elsif f.type == "BatchFeeDiscount"
          %td.col-3
          %td.col-3
        %td.col-3= f.discount
        - if @discount_edit
          %td.col-1
            .edit
              = link_to_remote "#{t('edit_text')}", :url => {:action => 'edit_fee_discount', :id => f.id}
              |Â 
            .delete= link_to_remote "#{t('delete_text')}",:confirm=>"#{t('delete_confirm_msg')}",:url => {:action => 'delete_fee_discount', :id => f.id}
- else
  %p.flash-msg
    = t('no_discount_found')
