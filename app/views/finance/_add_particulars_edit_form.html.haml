%label.head_label
  = t('edit_particulars_for_fee')
  %span
- form_remote_for :finance_fee_particulars,
- :url => {:action => 'add_particulars_update',:id => @finance_fee_particulars.id} do |form|
  #form-errors
  .label-field-pair
    .label-container
      %label
        = t('fee_name')
        \:
    .input-container= form.text_field :name
  .label-field-pair
    .label-container
      %label
        = t('fee_description')
        \:
    .input-container= form.text_field :description
  - unless @finance_fee_particulars.admission_no.nil?
    .label-field-pair
      .label-container
        %label
          = t('admission_no')
          \:
      .input-container= form.text_field :admission_no, :value => @finance_fee_particulars.admission_no , |
          :disabled => true                                                                |
  - unless @finance_fee_particulars.student_category_id.nil?
    .label-field-pair
      .label-container
        %label
          = t('student_category')
          \:
      .input-container= form.text_field :student_category_id,                                              |
          :value => StudentCategory.find(@finance_fee_particulars.student_category_id).name, |
          :disabled => true                                                                  |
  .label-field-pair
    .label-container
      %label
        = t('fee_amount')
        \:
    .input-container= form.text_field :amount, :value => @finance_fee_particulars.amount, :disabled => true
  = submit_tag "â–º #{t('update')}",:class=>'submit_button'
