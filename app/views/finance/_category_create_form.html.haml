%label.head_label
  = t('create_new_category')
  %span
- form_remote_for :finance_category,
- :url => {:action => 'category_create'} do |f|
  #form-errors
  .label-field-pair
    .label-container
      %label
        = t('category_name')
        \:
    .input-container= f.text_field :name
  .label-field-pair
    .label-container
      %label
        = t('description')
        \:
    .input-container= f.text_field :description
  .label-field-pair
    .label-container
      %label= t('is_this_under_income')
    .input-container
      = f.check_box :is_income
  #modelbox-submit
    = submit_tag "â–º #{t('create_text')}",:class=>'submit_button'
