<div id="content-header">
<%= image_tag("  show_finance.png") %>
  <h1><%= t('employee_search') %></h1>
  <h3><%= t('employee_details') %></h3>
  <div id="app-back-button">
   <%= link_to_function image_tag("  buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
    <div class="label-field-pair">
      <label for="monthly_payslip_salary_date"><%= t(' select_payslip_month_year') %></label>
      <div class="text-input-bg"><%= select :monthly_payslip, :salary_date, @salary_dates.map {|c| [c.salary_date.strftime("%B %Y"),c.salary_date.strftime("%Y-%m-%d")]},
                                              {:prompt => "#{t('select_a_month')}"},
                                              {:onChange => "#{remote_function(:url => {:action => "update_monthly_payslip"},
                                              :with => "'salary_date='+value+'&emp_id=#{@employee.id}'")}"} %></div>
    </div>
<div id="payslip_view"> </div>
    <div class="extender"></div>

</div>
