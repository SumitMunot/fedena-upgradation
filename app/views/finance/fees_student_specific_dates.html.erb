<div id="content-header">
<%= image_tag("  show_finance.png") %>
      <h1><%= t('special_fees_for_student') %></h1>
  <h3><%= @student.full_name%></h3>
  <div id="app-back-button">
  <%= link_to_function image_tag("  buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
  <div class="text-input-bg">
    <%= select  :fees_submission, :dates_id, @dates.map { |e| [e.name+" : "+e.start_date.to_s, e.id]},
      {:prompt => "#{t('select_fees_collection_date')}"},
      {:onChange => "#{remote_function( :url =>
      {:action => "update_fees_specific"},
      :with => "'date='+value+'&id='+#{@student.id}") }"} %>
  </div>

<div id="fees_specific"> </div>

<div id="modal-box" style="display:none;"></div>

</div>
