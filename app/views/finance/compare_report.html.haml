#content-header
  = image_tag("show_finance.png")
  %h1= t('transactions')
  %h3= t('monthly_transactions')
  #app-back-button
    = back_button
#page-yield
  .box
    #report
      = form_for :report, :url => {:action => 'report_compare'} do |form|
        .label-field-pair
          %label
            = t('select_start_date')
            \:
          .text-input-bg
            = calendar_date_select_tag 'start_date', I18n.l(Date.today,:format=>:default) ,:popup=>:force
        .label-field-pair
          %label
            = t('select_end_date')
            \:
          .text-input-bg
            = calendar_date_select_tag 'end_date',I18n.l(Date.today,:format=>:default) ,:popup=>:force
        %h4
          = t('compare_with')
        .label-field-pair
          %label
            = t('select_start_date')
            \:
          .text-input-bg
            = calendar_date_select_tag 'start_date2', I18n.l(Date.today,:format=>:default) ,:popup=>:force
        .label-field-pair
          %label
            = t('select_end_date')
            \:
          .text-input-bg
            = calendar_date_select_tag 'end_date2', I18n.l(Date.today,:format=>:default) ,:popup=>:force
        = submit_tag "â–º #{t('get_report')}",:class=>'submit_button'
