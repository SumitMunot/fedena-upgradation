<div id="content-header">
<%= image_tag("  show_finance.png") %>
  <h1><%= t('finance_transactions') %></h1>
  <h3><%=@batch.full_name%> <%= t('fees_report') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("  buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <div class="bread_crumb">
    <%= link_to t('finance_text'), :controller => "finance", :action=>"index" %> &raquo;
    <%= link_to "#{t('transactions')}", :controller => "finance", :action => "transactions" %> &raquo;
    <%= link_to "#{t('monthly_transactions')}", :controller => "finance", :action => "monthly_report" %> &raquo;
    <%= link_to "#{t('finance_transactions_view')}", :controller => "finance", :action => "update_monthly_report", :start_date=>@start_date, :end_date=>@end_date %> &raquo;
    <%= link_to "#{t('fees_report')}", :controller => "finance", :action => "fees_report", :start=>@start_date, :end=>@end_date %> &raquo;
    <%= t('batch') +": " + @batch.full_name%>
  </div>
  <% total =0 %>

  <b id="transaction-report-title"><%= @batch.full_name%>  <%= t('transaction_report') %> </b>
  <div id="fees-table">
    <div class="fees-th">
      <div class="fees-table-description"><p> <%= t('student_name') %> </p></div>
      <div class="fees-table-income"> <%= t('amount') %> </div>
      <div class="fees-table-receipt-no"> <%= t('receipt_no') %> </div>
      <div class="fees-table-date"> <%= t('date_text') %> </div>
    </div>
    <% @transaction.each do |f| %>

          <div class="list<%=cycle('odd', 'even')%>">
            <% student = f.student_payee %>
              <div class="fees-table-description"><%= "#{student.full_name}- (#{student.batch.full_name})" %></div>
              <div class="fees-table-income"> <%= f.amount %> </div>
              <div class="fees-table-receipt-no"> <%= f.receipt_no %> </div>
              <div class="fees-table-date"> <%= f.transaction_date.strftime("%m-%d-%Y") %> </div>
            </div>
            <% total += f.amount %>

    <% end %>
    <div class="fees-th">
      <div class="fees-table-description"><%= t('total_fees') %></div>
      <div class="fees-table-expenses"><%=total %></div>
    </div>
  </div>
</div>
