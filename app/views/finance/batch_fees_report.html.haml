#content-header
  = image_tag("show_finance.png")
  %h1= t('finance_transactions')
  %h3
    = @batch.full_name
    = t('fees_report')
  #app-back-button
    = back_button
#page-yield
  .bread_crumb
    = link_to t('finance_text'), :controller => "finance", :action=>"index"
    »
    \#{link_to "#{t('transactions')}", :controller => "finance", :action => "transactions"} »
    \#{link_to "#{t('monthly_transactions')}", :controller => "finance", :action => "monthly_report"} »
    \#{link_to "#{t('finance_transactions_view')}", :controller => "finance", :action => "update_monthly_report", :start_date=>@start_date, :end_date=>@end_date} »
    \#{link_to "#{t('fees_report')}", :controller => "finance", :action => "fees_report", :start=>@start_date, :end=>@end_date} »
    \#{t('batch') +": " + @batch.full_name}
  - total =0
  %b#transaction-report-title
    = @batch.full_name
    = t('transaction_report')
  #fees-table
    .fees-th
      .fees-table-description
        %p
          = t('student_name')
      .fees-table-income
        = t('amount')
      .fees-table-receipt-no
        = t('receipt_no')
      .fees-table-date
        = t('date_text')
    - @transaction.each do |f|
      %div{:class => "list#{cycle('odd', 'even')}"}
        - student = f.student_payee
        .fees-table-description= "#{student.full_name}- (#{student.batch.full_name})"
        .fees-table-income
          = f.amount
        .fees-table-receipt-no
          = f.receipt_no
        .fees-table-date
          = f.transaction_date.strftime("%m-%d-%Y")
      - total += f.amount
    .fees-th
      .fees-table-description= t('total_fees')
      .fees-table-expenses= total
