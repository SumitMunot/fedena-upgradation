%table#listing{:align => "center", :cellpadding => "1", :cellspacing => "1", :width => "100%"}
  - unless @students_result.nil?
    %tr.tr-head
      %td
        = t('sl_no')
      %td
        = t('student_name')
      %td
        = t('batch')
      %td
        = t('admission_no')
    %tr.tr-blank
    - @students_result.each_with_index do |t, i|
      %tr{:class => "tr-#{cycle('odd', 'even')}"}
        %td.col-5= i+1
        %td.col-3= link_to t.full_name, :action => "fees_structure_dates", :id => t.id
        %td.col-3= t.batch.full_name
        %td.col-1= t.admission_no
  - else
    %tr{:class => "tr-#{cycle('odd', 'even')}"}
      %td.col-2= t('no_users')
