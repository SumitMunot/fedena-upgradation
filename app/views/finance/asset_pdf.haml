#page-yield
  .hor_line
  %h2= t('assets_report')
  .hor_line
  .extender
  .report
    - total_amount = 0
    #pdf-info
      %table#pdf-table{:cellspacing => "0", :width => "100%"}
        %tr.table-header
          %td.col-pdf= t('sl_no')
          %td.col-pdf
            = t('asset')
          %td.col-pdf
            = t('created_at')
          %td.col-pdf= t('total_amount')
        - i = 0
        - c= 'even'
        - @assets.each do |a|
          - if a.is_inactive?
            %tr{:class => "#{cycle(c,(["odd","even"]-[c]).first)}"}
              %td.col-pdf= i+=1
              %td.col-pdf= a.title+" ( inactive )"
              %td.col-pdf= a.created_at.strftime("%d-%m-%Y")
              %td.col-pdf
                = @currency_type + " "
                = a.amount
          - else
            %tr{:class => "#{cycle(c,(["odd","even"]-[c]).first)}"}
              %td.col-pdf= i+=1
              %td.col-pdf= a.title
              %td.col-pdf= a.created_at.strftime("%d-%m-%Y")
              %td.col-pdf
                = @currency_type + " "
                = a.amount
          - total_amount+= a.amount
        %tr{:class => "#{cycle(c,(["odd","even"]-[c]).first)}"}
          %td.col-pdf{:colspan => "3"}= t('grand_total')
          %td.col-pdf{:colspan => "1"}
            = @currency_type + " "
            = total_amount
