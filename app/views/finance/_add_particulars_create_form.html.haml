%label.head_label
  = t('add')
  = t('particulars')
  = t('for')
  = t('additional')
  = t('fees_text')
  %span
- form_remote_for :finance_fee_particulars, :url => {:action => 'add_particulars_create',:id => @collection_date.id} do |form|
  #form-errors
  .label-field-pair
    .label-container
      %label
        = t('fees_name')
        \:
    .input-container= form.text_field :name
  .label-field-pair
    .label-container
      %label
        = t('fees_description')
        \:
    .input-container= form.text_field :description
  .label-field-pair2
    .label-container2
      %label
        = t('particulars')
        \:
    .input-container2
      .opt
        = radio_button("particulars","select","all",                                                             |
          {:checked => true, :onchange => "#{remote_function(:url => {:action => "student_or_student_category"}, |
          :with => "'select_value='+value")}"})                                                                  |
        = t('all')
      .opt
        = radio_button("particulars","select","student",                                       |
          {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"}, |
          :with => "'select_value='+value")}"})                                                |
        = t('admission_number')
      .opt
        = radio_button("particulars","select","category",                                      |
          {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"}, |
          :with => "'select_value='+value")}"})                                                |
        = t('student_category')
  #student
  .label-field-pair
    .label-container
      %label
        = t('fees_amount')
        \:
    .input-container= form.text_field :amount
  = submit_tag "â–º #{t('add')}",:class=>'submit_button'
