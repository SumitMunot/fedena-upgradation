%label.head_label
  = t('edit_fee_collection_date')
  %span
- form_remote_for :finance_fee_collection,
- :url => {:action => 'fee_collection_update', :id => @finance_fee_collection.id} do |form|
  #form-errors
  .label-field-pair
    %label{:for => "reason"}
      = t('fee_category')
      \:
    .text-input-bg
      %span= @finance_fee_collection.fee_category.name
    #batchs
  .label-field-pair
    %label{:for => "reason"}
      = t('course_for_category')
      \:
    .text-input-bg
      %span= @finance_fee_collection.batch.full_name
    #batchs
  .label-field-pair
    %label{:for => "reason"}
      = t('fee_collection_name')
      \:
    .text-input-bg= form.text_field :name
  .label-field-pair
    %label{:for => "reason"}
      = t('start_date')
    .text-input-bg= calendar_date_select_tag 'finance_fee_collection[start_date]',  I18n.l(@finance_fee_collection.start_date,:format=>:default),:popup => "force"
  .label-field-pair
    %label{:for => "reason"}
      = t('end_date')
    .text-input-bg= calendar_date_select_tag 'finance_fee_collection[end_date]',I18n.l(@finance_fee_collection.end_date,:format=>:default) ,:popup => "force"
  .label-field-pair
    %label{:for => "reason"}
      = t('due_date')
    .text-input-bg= calendar_date_select_tag 'finance_fee_collection[due_date]', I18n.l(@finance_fee_collection.due_date,:format=>:default),:popup => "force"
  .extender
  #submit-button
    = submit_tag "â–º #{t('update')}",:class=>'submit_button'
