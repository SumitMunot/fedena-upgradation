#content-header
  = image_tag("show_finance.png")
  %h1= t('fees_submission')
  %h3= t('student_fees_submission')
  #app-back-button
    = back_button
#page-yield
  #batchs1
    = form_for :fees_submission_batch do
      .label-field-pair
        %label= t('select_a_batch')
        .text-input-bg
          = select :fees_submission, :batch_id, @batches.map { |c| [c.full_name, c.id] },                                          |
            {:prompt => "#{t('select_a_batch')}"},                                                                                 |
            {:onChange => "#{remote_function(:url => {:action => "update_fees_collection_dates"}, :with => "'batch_id='+value")}"} |
      .label-field-pair
        %label= t('select_fee_collection_date')
        .text-input-bg
          #fees_collection_dates
            = render :partial => "fees_collection_dates"
    #student
    #modal-box{:style => "display:none;"}
  .extender
