<div id="content-header">
<%= image_tag("  show_finance.png") %>
  <h1><%= t('fee_collection_dates') %></h1>
  <h3><%= t('view_fee_collection_dates') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("  buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="page-yield">
  <div class="box">
    <br/>
    <div class="name"><%= t('fee_collection_name') %></div><div class="val themed_text"><span>:</span><%= @fee_collection.name %></div>
    <div class="name"><%= t('fee_category_name') %></div><div class="val themed_text"><span>:</span><%= @fee_category.name %></div>
    <div class="name"><%= t('start_date') %></div><div class="val themed_text"><span>:</span><%= @fee_collection.start_date %></div>
    <div class="name"><%= t('end_date') %></div><div class="val themed_text"><span>:</span><%= @fee_collection.end_date %></div>
    <div class="name"><%= t('due_date') %></div><div class="val themed_text"><span>:</span><%= @fee_collection.due_date %></div>
    <br /><br />
    <% total_fees =0 %>
    <div id="fees-table">
      <div class="fees-th">
        <div class="fees-table-particulars"><%= t('particulars') %></div>
        <div class="fees-table-amount"><%= t('amount') %></div>
      </div>
      <% unless @fee_particulars.nil? %>
        <% @fee_particulars.each do |fee| %>
          <div class="fees-tr">
            <div class="fees-table-particulars"><%= fee.name %></div>
            <div class="fees-table-amount"><%= fee.amount %></div>
            <% total_fees += fee.amount %>
          </div>
        <% end %>
      <% end %>

      <div class="fees-tr">
        <div class="fees-table-particulars"><b><%= t('total_fees') %></b></div>
        <div class="fees-table-amount"><b><%= total_fees %></b></div>
      </div>
    </div>
  </div>
</div>
