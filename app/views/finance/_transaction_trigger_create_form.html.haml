%label.head_label
  = t('create_automatic_transaction')
  %span
- form_remote_for :transaction_trigger,
- :url => {:action => 'transaction_trigger_create'} do |form|
  #form-errors
  .label-field-pair
    .label-container
      %label= t('category')
    .input-container= form.select :finance_category_id, @categories.map { |c| [c.name, c.id] }
  .label-field-pair
    .label-container
      %label= t('percentage')
    .input-container= form.text_field :percentage
  .label-field-pair
    .label-container
      %label= t('title')
    .input-container= form.text_field :title
  .label-field-pair
    .label-container
      %label= t('description')
    .input-container
      = form.text_field :description
  #modelbox-submit
