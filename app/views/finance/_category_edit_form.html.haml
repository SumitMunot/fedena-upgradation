- form_remote_for :finance_category,
- :url => {:action => 'category_update', :id => @finance_category.id},
- :complete => 'Modalbox.hide();return false;' do |f|
  .label-field-pair
    .label-container
      %label
        = t('category_name')
        \:
    .input-container= f.text_field :name
  .label-field-pair
    .label-container
      %label
        = t('description')
        \:
    .input-container= f.text_field :description
  .label-field-pair
    .label-container
      %label= t('is_this_under_income')
    .input-container
      = f.check_box :is_income
