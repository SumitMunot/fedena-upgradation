#page-yield
  .hor_line
  %h2= t('donation_receipt')
  .hor_line
  .extender
  .report
    #main_info
      %h4
        = "#{t('donor')}: #{@donation.donor}"
    #pdf-info
      %table#pdf-table{:cellspacing => "0", :width => "100%"}
        %tr.even
          %td.col-pdf= t('description')
          %td.col-pdf= @donation.description
        %tr.odd
          %td.col-pdf= t('amount')
          %td.col-pdf= @currency_type.to_s+" "+@donation.amount.to_s
        %tr.even
          %td.col-pdf= t('transaction_id')
          %td.col-pdf= @donation.transaction_id
