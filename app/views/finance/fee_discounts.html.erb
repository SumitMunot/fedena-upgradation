<div id="content-header">
<%= image_tag("  show_finance.png") %>
  <h1><%= t('fee_discounts') %></h1>
  <h3><%= t('finance_management') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("  buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="inner-tab-menu">
  <ul>

        <li><%= link_to "#{t('create_discount')}", :action=>'fee_discount_new'%></li>
      </ul>

</div>

<div id="page-yield">
  <div id="flash_box">
  </div>
  <div id="flash-notice"></div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="bread_crumb">
    <%= link_to t('finance_text'), :controller => "finance", :action=>"index" %> &raquo;
    <%= link_to "#{t('fees_text')}", :controller => "finance", :action => "fees_index" %> &raquo;
    <%= link_to "#{t('create_fees')}", :controller => "finance", :action => "fees_create" %> &raquo;
    <%= link_to "#{t('master_fees')}", :controller => "finance", :action => "master_fees" %> &raquo;
    <%= t('fee_discounts') %>
  </div>

    <div id="batch">
      <div class="label-field-pair"><label><%= t('select_a_batch') %> : </label>
        <div class="text-input-bg"> <%= select("id",:id,@batches.map { |c| [c.full_name, c.id] },
            {:prompt => "#{t('select_a_batch')}"},
            {:onChange => "#{remote_function(:url => {:action => "update_master_fee_category_list"}, :with => "'id='+value")}"})%> </div>
      </div>
    </div>

    <div id="master-category-box"></div>
    <div id="discount-box"></div>

     <div id="modal-box" style="display:none;"></div>



</div>
