- unless flash[:notice].nil?
  %p.flash-msg
    = flash[:notice]
%table#listing
  %tr.tr-head
    %td= t('name')
    %td= t('start_date')
    %td= t('end_date')
    %td= t('due_date')
    %td
  - @finance_fee_collections.each do |f|
    %tr{:class => "tr-#{cycle('odd', 'even')}"}
      %td.col-2= f.name
      %td.col-3= f.start_date
      %td.col-3= f.end_date
      %td.col-3= f.due_date
      %td.col-1
        .edit= link_to t('edit_text'), {:action => 'fee_collection_edit', :id => f.id}, remote: true
        - unless f.check_fee_category == false
          .delete= link_to t('delete_text'), {:action => 'fee_collection_delete', :id => f.id}, method: :DELETE, remote: true
