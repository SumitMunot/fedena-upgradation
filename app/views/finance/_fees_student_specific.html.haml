= form_for :element , :url => {:action => 'fees_student_specific', :id => @student.id,:date =>@date.id } do |f|
  #create_user_form
    .label_field
      %label{:for => "label"}= t('label')
      .text_field_bg= f.text_field :label
      .comment
        = t('leave_field_blank')
        \.
    .label_field
      %label{:for => "amount"}= t('amount')
      .text_field_bg= f.text_field :amount
    .label_field
      %label{:for => "amount"}= t('select_fee_category')
      .text_field_bg= select :element, :parent_id, @components.map{|c| [c.label, c.id]}, :prompt => t('.select_a_category')
    .label_field
      = image_submit_tag "", :value => t('save_changes'), :class => "submit_button"
