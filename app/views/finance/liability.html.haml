#content-header
  = image_tag("show_finance.png")
  %h1= t('asset_liability_management')
  %h3= t('liability')
  #app-back-button
    = back_button
#page-yield
  #flash_box
  - unless flash[:notice].nil?
    %p.flash-msg= flash[:notice]
  .box
    .link-box
      .link-heading
        = link_to_function("#{t('create_text')}") { |page|                                                |
            page.replace_html 'modal-box', :partial => 'create_liability_form'                            |
            page << "Modalbox.show($('modal-box'), {title: '#{t('create_new_liability')}', width: 500});" |
          }                                                                                               |
      .link-descr= t('create_new_liability')
    .link-box
      .link-heading
        = link_to "#{t('view')}", :action => "view_liability"
      .link-descr= t('liability_view')
    #modal-box{:style => "display:none;"}
