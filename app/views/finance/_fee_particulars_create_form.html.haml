%label.head_label
  = t('create_particular_for_master_fee')
  %span
#grading-levels-form
  - form_remote_for  :finance_fee_particular,:url =>{:action => 'fees_particulars_create2'}  do |f|
    #form-errors
    = hidden_field_tag "finance_fee_particular[finance_fee_category_ids][]", @fees_category.id
    = hidden_field_tag "category_selected", '1'
    .label-field-pair
      .label-container
        = f.label "#{t('name')}"
      .input-container= f.text_field :name
    .label-field-pair
      .label-container= f.label "#{t('description')}"
      .input-container= f.text_field :description
    .label-field-pair2
      .label-container2
        %label= t('create_using')
      .input-container2
        .opt
          = radio_button("particulars","select","all",                                                          |
            {:checked=>true,:onchange => "#{remote_function(:url => {:action => "student_or_student_category"}, |
            :with => "'select_value='+value")}"})                                                               |
          = t('all')
        .opt
          = radio_button("particulars","select","student",                                       |
            {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"}, |
            :with => "'select_value='+value")}"})                                                |
          = t('admission_no')
        .opt
          = radio_button("particulars","select","category",                                      |
            {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"}, |
            :with => "'select_value='+value")}"})                                                |
          = t('student_category')
    #student
    .label-field-pair
      .label-container= f.label "#{t('amount')}"
      .input-container
        = f.text_field :amount
    = submit_tag "â–º #{t('create_text')}",:class=>'submit_button'
