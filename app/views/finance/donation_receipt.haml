#content-header
  = image_tag("show_finance.png")
  %h1= t('donations')
  %h3= t('donation_receipt')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg= flash[:notice]
  .box
    .field1
      = t('donor')
      \:
    .val.themed_text
      = @donation.donor
    .field1
      = t('description')
      \:
    .val.themed_text= @donation.description
    .field1
      = t('amount')
      \:
    .val.themed_text= @donation.amount
    .field1
      = t('transaction_id')
      \:
    .val.themed_text= @donation.transaction_id unless @donation.transaction_id.nil?
    %div
      = link_to "â–º #{t('print_receipt')}", {:action => 'donation_receipt_pdf', :id => @donation.id}, :format => 'pdf', :target => '_blank', :class=>"user_button"
