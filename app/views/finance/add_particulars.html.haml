#content-header
  = image_tag("show_finance.png")
  %h1= t('additional_fees')
  %h3= t('create_additional_fees')
  #app-back-button
    = back_button
#page-yield
  #flash_box
  - unless flash[:notice].nil?
    %p.flash-msg= flash[:notice]
  #message
  %br/
  #particular-box
    .name= t('category_name')
    .val.themed_text
      %span :
      = @additional_category.name
    .name= t('description')
    .val.themed_text
      %span :
      = @additional_category.description
    - unless @additional_category.batch.nil?
      .name= t('course_text')
      .val.themed_text
        %span :
        = @additional_category.batch.full_name
    - else
      .name= t('course_text')
      .val.themed_text
        %span> :
        ALL
    .name= t('start_date')
    .val.themed_text
      %span :
      = @collection_date.start_date
    .name= t('end_date')
    .val.themed_text
      %span :
      = @collection_date.end_date
    .name= t('due_date')
    .val.themed_text
      %span :
      = @collection_date.due_date
    %br/
    #particulars= render :partial => 'fees_particulars_list'
  #modal-box{:style => "display:none;"}
