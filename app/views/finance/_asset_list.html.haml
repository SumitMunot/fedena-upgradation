%table#listing{:align => "center", :width => "99%"}
  %tr.tr-head
    %td= t('asset')
    %td= t('created_at')
    %td= t('total_amount')
    %td
  - @assets.each do |a|
    - if a.is_inactive?
      %tr.inactive
        %td.col-3= link_to a.title+" ( inactive )" ,:action=>"each_asset_view",:id => a.id
        %td.col-3= link_to a.created_at.strftime("%d-%m-%Y"),:action =>"each_asset_view",:id => a.id
        %td.col-3
          = @currency_type + " "
          = a.amount
        %td.col-1
          = link_to t('edit_text'), { :action => 'edit_asset', :id => a.id }, remote: true
          = link_to t('delete_text'), { :action => 'delete_asset', :id => a.id } ,:confirm=>t('delete_confirm_msg')}, remote: true, method: :DELETE
    - else
      %tr{:class => "tr-#{cycle('odd', 'even')}"}
        %td.col-3= link_to a.title ,:action=>"each_asset_view",:id => a.id
        %td.col-3= link_to a.created_at.strftime("%d-%m-%Y"),:action =>"each_asset_view",:id => a.id
        %td.col-3
          = @currency_type + " "
          = a.amount
        %td.col-1
          = link_to t('edit_text'), { :action => 'edit_asset', :id => a.id }, remote: true
          = link_to t('delete_text'), { :action => 'delete_asset', :id => a.id },:confirm=>t('delete_confirm_msg')}, remote: true, method: :DELETE
