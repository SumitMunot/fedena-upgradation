<span class="span-sub-heading"><%= t('subject_details') %></span>
<%= form_for :student_previous_subject_details, url: { action: :save_previous_subject}, remote: true do |s| %>
  <%= s.hidden_field :student_id, :value => @student.id %>
  <%= error_messages_for 'student_previous_subject_details', :header_message => nil %>
  <div class="label-field-pair">
    <label><%= t('subject') %></label>
    <div class="text-input-bg"><%= s.text_field :subject %></div>
    <div class="extender"></div>
  </div>
  <div class="label-field-pair">
    <label><%= t('mark') %></label>
    <div class="text-input-bg"><%= s.text_field :mark %></div>
    <div class="extender"></div>
  </div>
  <div class="save-proceed-button1" id="save-proceed-button">
    <%= s.submit "â–º #{t('save')}"%>
  </div>

<% end %>

