#content-header
  = image_tag("student_details/student_details_logo.jpg")
  %h1
    = t('student_details')
  %h3
    = t('view_details')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .label-field-pair-select-class
    %label{:for => "student-detail-select-class"}
      = t('select_a_batch')
    .text-input-bg= select :course, :course_id,                                                      |
        @batches.map {|b| [b.full_name, b.id]},                                          |
        {:prompt => "#{t('select_a_batch')}"},                                           |
        {:onChange => "#{remote_function(:url => {:action => "list_students_by_course"}, |
        :with => "'batch_id='+value",                                                    |
        :before => "Element.show('loader')",                                             |
        :success => "Element.hide('loader')"                                             |
        )}"}                                                                             |
    = image_tag("loader.gif",     |
      :align => "absmiddle",      |
      :border => 0,               |
      :id => "loader",            |
      :style =>"display: none;" ) |
  #students
