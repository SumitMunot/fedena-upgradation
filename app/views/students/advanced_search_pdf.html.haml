- index = 0
- @students.in_groups_of(25,false).each do |students|
  .page
    .hor_line
    %h2
      = t('student_text')
      \-#{t('advanced_search_text')}
    .hor_line
    .extender
    #main_info
      %h4
        = "#{t('students')} #{t('listed_by')}"+@searched_for.downcase
    .report
      %table#pdf-table{:cellspacing => "0", :width => "100%"}
        - c= 'odd'
        %tr.table-header
          %td.col-pdf= t('sl_no')
          %td.col-pdf= t('name')
          %td.col-pdf= t('batch')
          %td.col-pdf= t('adm_no')
          %td.col-pdf= t('date_of_birth')
        - students.each.each_with_index do |student,i|
          %tr{:class => "#{cycle((["odd","even"]-[c]).first,c)}"}
            %td.col-pdf= index+=1
            %td.col-pdf= student.full_name
            %td.col-pdf= student.batch.full_name
            %td.col-pdf= student.admission_no
            %td.col-pdf= student.date_of_birth.strftime("%d %b, %Y")
