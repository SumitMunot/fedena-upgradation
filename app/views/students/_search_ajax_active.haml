%table#listing{:align => "center", :cellpadding => "1", :cellspacing => "1", :width => "100%"}
  - unless @students.blank?
    %tr.tr-head
      %td
        = t('sl_no')
      %td
        = t('first_name')
      %td
        = t('batch')
      %td
        = t('adm_no')
    %tr.tr-blank
    - @students.each_with_index do |student, i|
      %tr{:class => "tr-#{cycle('odd', 'even')}"}
        %td.col-1= i+1
        %td.col-4= link_to student.full_name, :controller => 'students', :action => 'profile', :id => student.id
        %td.col-4= student.batch.full_name
        %td.col-1= student.admission_no
  - else
    %tr{:class => "tr-#{cycle('odd', 'even')}"}
      %td.col-2= t('no_students_found')
