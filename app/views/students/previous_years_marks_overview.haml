#content-header
  = image_tag("admission/admission_page_logo.jpg")
  %h1= t('student_info')
  %h3= t('previous_year_result')
  #app-back-button
    = back_button
#page-yield
  %script{:src => "/javascripts/swfobject.js", :type => "text/javascript"}
  = @graph
  #results-table
    .results-table-th
      .course-name= t('class_sec')
      .total-score= t('total_marks')
    - @all_courses.each do |c|
      .results-table-tr
        .course-name= c.name
        .total-score= @student.annual_average_marks_for_a_course(c)
