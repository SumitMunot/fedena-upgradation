<div id="content-header">
  <%= image_tag("student_details/student_details_logo.jpg") %>
  <h1><%= t('students') %></h1>
  <h3><%= t('remove_student') %></h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png", border: 0),'javascript: void(0);', onclick: "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
  <% end %>
  <div id="student-details">
    <h3><%= @student.full_name %></h3>
    <h4><%= t('adm_no') %> : <%= @student.admission_no %></h4>
    <h4><%= t('class') %>: <%= @student.batch.course_name %></h4>
  </div>

  <div class="extender"> </div>

  <div class="link-box">
    <div class="link-heading"> <%= link_to t('leaving_institution'), :controller => "student", :action => "change_to_former", :id => @student.id %> </div>
    <div class="link-descr"><%= t('leaving_institution_message') %></div>
  </div>

  <div class="link-box">
    <div class="link-heading"> <%= link_to t('remove_student_records'), :controller => "student", :action => "delete", :id => @student.id %> </div>
    <div class="link-descr"><%= t('remove_student_message') %></div>
  </div>

