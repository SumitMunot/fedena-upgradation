<div class="grades">
  <div class="label-field-pair">
    <label for="configuration_grading_systems"><%= t('class_designations_text') %> :</label>
  </div>
  <div class="fee_category_scroll">
    <div class="sel-list">
      <%= t('select') %>: <%= link_to_function t('all'), "$('input.batches_box').each(function(checkbox) { checkbox.checked = true; });" %>,
      <%= link_to_function t('none'), "$('input.batches_box').each(function(checkbox) { checkbox.checked = false; });" %>
    </div>
    <% @class_designations.each do |d| %>
      <div class="each_batch">
        <%= check_box_tag "combined_report[designation_ids][]", d.id,false,:class=>'batches_box' %> <%= d.name %>
      </div>
    <% end %>
  </div>
</div>
<div class="grades">
  <div class="label-field-pair">
    <label for="configuration_grading_systems"><%= t('ranking_levels_text') %>:</label>
  </div>
  <div class="fee_category_scroll">
    <div class="sel-list">
      <%= t('select') %>: <%= link_to_function t('all'), "$('input.batches_box1').each(function(checkbox) { checkbox.checked = true; });" %>,
      <%= link_to_function t('none'), "$('input.batches_box1').each(function(checkbox) { checkbox.checked = false; });" %>
    </div>
    <% @ranking_levels.each do |r| %>
      <div class="each_batch">
        <%= check_box_tag "combined_report[level_ids][]", r.id,false,:class=>'batches_box1' %> <%= r.name %>
      </div>
    <% end %>
  </div>
</div>
