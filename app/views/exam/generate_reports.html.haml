= javascript_include_tag :application
#content-header
  = image_tag("examination/show_exam.png")
  %h1= t('exams_text')
  %h3= t('generate_reports')
  #app-back-button
    = back_button
#inner-tab-menu
  %ul
    %li= link_to t('generate_previous_reports'), { controller: :exam, action: :generate_previous_reports}
    %li= link_to "View Scheduled Jobs", scheduled_task_path( job_object: "Batch", job_type: "1")
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .box
    = form_for :report  do |x|
      .label-field-pair
        %label{:for => "student_course"}
          = t('select_a_course')
          \:
        .text-input-bg
          = select :report, :course_id,                                                                                                                                                                        |
            Course.active.map {|b| [b.full_name, b.id]},{ :prompt => t('select_a_course')},
            {:onChange => "onChangeRequest(this, '#{url_for(action: :list_batch_groups, course_id: 'paramid')}')"}
      #batch_group_list
      = submit_tag "", :value => "â–º#{t('generate')}", :class => "submit_button"
    .extender
