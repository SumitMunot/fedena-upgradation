<div id="content-header">
  <%= image_tag("examination/show_exam.png") %>
  <h1><%= t('exams_text') %></h1>
  <h3><%= t('subject_wise_report') %></h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png", border: 0), 'javascript:void(0)', "history.back()" %>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="bread_crumb">
    <%= link_to t('exam_text'), exam_index_path %> &raquo;
    <%= link_to t('report_center'), report_center_exam_index_path %> &raquo;
    <%= t('subject_wise_report') %>
  </div>
  <div class="box">

    <%= form_for :exam_report, url: generated_report2_exam_index_path do |x| %>

      <div class="text-input-bg">
        <%= select :exam_report, :batch_id,
          @batches.map {|b| [b.full_name, b.id]},
          {:prompt => "#{t('select_a_batch')}"},
          {:onChange => "#{remote_function(url: list_subjects_exam_index_path(batch_id: "value"),
          with: "'batch_id='+value",
          before: "Element.show('loader')",
          success: "Element.hide('loader')"
          )}"} %>
      </div>
      <div>
        <div id="subject-select" class="text-input-bg">
          <%= select :exam_report, :subject_id, @subjects.map{|subject| [subject.name,subject.id]},prompt: t('select_subject') %>
        </div> <%= image_tag("loader.gif",
          :align => "absmiddle",
          :border => 0,
          :id => "loader",
          :style =>"display: none;" ) %>
      </div>
      <%= submit_tag "", :value => "â–º #{t('view')}", :class => "submit_button" %>


    <% end %>
    <div class="extender"></div>
  </div>
</div>
