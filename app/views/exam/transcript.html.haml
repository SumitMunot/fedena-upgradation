#content-header
  = image_tag("examination/show_exam.png")
  %h1= t('exams_text')
  %h3= t('view_transcripts')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .bread_crumb
    = link_to t('exam_text'), exam_index_path
    »
    \#{link_to t('report_center'), report_center_exam_index_path} »
    \#{t('view_transcripts')}
  .box
    = form_for :transcript, url: student_transcript_exam_index_path do |x|
      .label-field-pair
        %label{:for => "student_course"}
          = t('select_a_batch')
          \:
        .text-input-bg
          = select :transcript, :batch_id,         |
            @batches.map{|b| [b.full_name, b.id]}, |
            {prompt: t('select_a_batch')}          |
      = submit_tag "", value: "► #{t('view')}", class: :submit_button
    .extender
