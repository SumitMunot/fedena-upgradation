#content-header
  = image_tag("examination/show_exam.png")
  %h1= t('weightages_text')
  %h3= t('assign_courses')
  #app-back-button
    = back_button
#inner-tab-menu
  %ul
#page-yield
  #flash-box
    - unless flash[:notice].nil?
      %p.flash-msg
        = flash[:notice]
  = form_for @weightage do |f|
    %ul#category-list
      %li.listheading
        .heading-name= t('select_courses')
        .heading-edit
      - @courses.each do |g|
        %li{:class => "list#{cycle('odd', 'even')}"}
          %label
            .category-edit= check_box_tag "cce_weightage[course_ids][]", g.id, @weightage.courses.include?(g)
            .category-name
              = g.full_name
    = f.submit "", :value => "â–º #{t('save')}", :class => "submit_button"
