  .box
    - form_remote_for @weightage,:url=>{:controller=>"cce_weightages",:id=>@weightage.id,:action=>'update'} do |f|
      #form-errors
      = error_messages_for :weightage
      .label-field-pair
        %label{:for => "category_name"} Weightage
        .text-input-bg= f.text_field :weightage
      .label-field-pair
        %label{:for => "category_name"} Type
        .text-input-bg
          = f.select :criteria_type,@criteria
      .label-field-pair
        %label{:for => "category_name"} Exam Category
        .text-input-bg
          = f.select :cce_exam_category_id ,@exam_categories.map{|m| [m.name,m.id]} ,:prompt=>"Select a category"
      = f.submit "", :value => "â–º Update", :class => "submit_button"
    .extender
