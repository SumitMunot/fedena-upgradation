<div id="content-header">
  <%= image_tag("show_settings.png") %>
  <h1><%= t('batch') %></h1>
  <h3><%= t('assign_tutor') %></h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png", border: 0),'javascript: void(0);', onclick: "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <ul id="tutor-list">
    <%= render :partial=>'assigned_tutor_list' %>
  </ul>

  <div class="label-field-pair">
    <label for="department_name"><%= t('department') %></label>
    <div class="text-input-bg"><%= select :subject_assignment, :department_id, @departments.map { |s| [s.name, s.id] },
        {:prompt => "#{t('select_a_department')}"},
        {:onChange => "#{remote_function(:url => {:action => "update_employees"},
        :with => "'department_id='+value+'&batch_id=#{@batch.id}&'+")}"} %>
    </div>
  </div>
  <div id="employee-list"></div>
  <div class="extender"></div>

</div>
