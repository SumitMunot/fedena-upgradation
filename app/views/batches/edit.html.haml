#content-header
  = image_tag("examination/show_exam.png")
  %h1= t('courses_text')
  %h3= t('edit_batch')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .box
    .bread_crumb
      = link_to "#{t('courses_text')}", courses_path
      »
      \#{link_to @course.full_name, @course} »
      \#{link_to "#{t('batch')} #{@batch.name}"} »
      \#{t('edit_text')}
    = form_for [@course, @batch] do |f|
      .label-field-pair
        .label-container= t('name')
        .input-container= f.text_field :name
      .label-field-pair
        .label-container= t('start_date')
        .input-container= text_field_tag 'batch[start_date]',I18n.l(@batch.start_date.to_date, :format=>:default), :popup => "force", class: :datepicker
      .label-field-pair
        .label-container= t('end_date')
        .input-container= text_field_tag 'batch[end_date]',I18n.l(@batch.end_date.to_date, :format=>:default) ,:popup => "force", class: :datepicker
      = submit_tag "", :value => "► #{t('save')}", :class => "submit_button"
    .extender
