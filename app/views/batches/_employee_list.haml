%ul#tutor-list
  - @emps_assigned =  @batch.employee_id.split(",") unless @batch.employee_id.nil?
  - unless @employees.empty?
    %li.heading
      = t('assign_new')
      \:
    - @employees.each do |e|
      %li{:class => "list#{cycle('even', 'odd')}"}
        .tutor-name= e.full_name
        - if @emps_assigned.nil? or not @emps_assigned.include?("#{e.id}")
          .remove= link_to_remote "#{t('assign')}", :url => {:action => "assign_employee", :id => e.id,:batch_id=>params[:batch_id],:department_id=>params[:department_id]}, :update => "department-select"
        - else
          .remove= link_to_remote "#{t('remove')}", :url => {:action => "remove_employee", :id => e.id,:batch_id=>params[:batch_id],:department_id=>params[:department_id]}, :update => "department-select"
  - else
    %p.flash-msg
      = t('no_employee_found')
      \.
