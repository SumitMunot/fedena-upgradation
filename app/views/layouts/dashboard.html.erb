<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html dir="<%= (rtl?) ? 'rtl' : 'ltr' %>">
  <head>
    <% @direction = (rtl?) ? 'rtl/' : '' %>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title><%= @title %></title>
    <% unless current_school_detail.new_record? %>
      <link rel="icon" href="<%=current_school_detail.logo.url%>" type="<%=current_school_detail.logo.content_type%>" />
      <link rel="shortcut icon" href="<%=current_school_detail.logo.url%>" type="<%=current_school_detail.logo.content_type%>" />
    <% end %>

    <%= stylesheet_link_tag :application, media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

    <%= javascript_include_tag :defaults, cache: 'cache/javascripts/all' %>
    <%= javascript_include_tag 'scripts/nicetitle', 'droplicious' %>
    <%= javascript_include_tag 'builder' %>
    <%= javascript_include_tag 'modalbox' %>
    <%#= javascript_include_tag 'jquery/jquery.hotkeys.js'%>
  </head>

  <body>
    <div id="header_bg">
      <div id="header">
        <div id="outer-header-link">
          <div id="institution-name">
            <%= current_school_name %>
          </div>
          <div id="header_link" >
            <div id="messages-link">
              <%= link_to t('messages'), :controller => "reminder", :action => "index" %>
              <%= render partial: 'layouts/reminder_count' %>
            </div>
            <div id="profile-link">
              <%= link_to @current_user.first_name, { controller: :user, action: :profile, id: @current_user.username }, class: "profile-link" %>
            </div>
            <div id="logout-link">
              <%= link_to t('log_out'), logout_user_index_path %>
            </div>
          </div>
        </div>
        <div id="outer-main-menu">
          <%= main_menu %>
        </div>
        <div id="outer-autosuggest-menu">
          <%= render :partial => "layouts/autosuggest_menu" %>
        </div>
      </div>
    </div>

    <div id="content_wrapper" >
      <div id="content"><%= yield %> </div>
      <div class="extender"></div>
    </div>

    <div id="footer">
      <div id="footer_logo">
        <div id="powered_by">
          <%= t('powered_by') %>
          <%= link_to FedenaSetting.company_details[:company_name], FedenaSetting.company_details[:company_url], target: :blank  %>
        </div>
      </div>
    </div>
  </body>
</html>
