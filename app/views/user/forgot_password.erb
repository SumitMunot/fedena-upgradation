<div id="wrapper">
  <div id="top_logo">
    <%= image_tag current_school_detail.logo.url %>
  </div>
    <div id="login_strip"></div>
  <% if @network_state.config_value.to_s == "Online" %>
    <div id="login_area_bg">

      <%= form_for :reset_password do |form| %>

        <div id="login_area">
          <label for="email"><%= t('enter_email') %></label>
          <div id="email_textbox_bg">
            <%= form.text_field :username %>
          </div>

          <div id="submit_area">
            <%= submit_tag t('submit'), :class => "submit" %>
          </div>

          <% if !flash.empty? %>
            <%= "<div id=\"notice\">" + flash[:notice] + "</div>" %>
          <% end %>

        </div>
      <% end %>
    </div>
  <% else %>
    <div id="login_area_bg">
      <div id="login_area">
        <label class="offline"><%= t('contact_admin') %>.</label>
      </div>
    </div>
  <% end %>
</div>

<div id="help_forgot_pw">
  <div id="footer_links">
    &nbsp;
  </div>
</div>

<div id="footer">
  <div id="footer_logo">
    <div id="powered_by">
      <%= t('powered_by') %> <a href=<%= "#{FEDENA_SETTINGS[:company_url]}" %> target="_blank"><%= FEDENA_SETTINGS[:company_name] %></a>
    </div>
  </div>
</div>

