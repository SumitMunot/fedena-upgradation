# and open the template in the editor.
%>

<div id="content-header">
  <img src="examination/show_exam.png" alt="Exam" />
  <h1><%= t('exam_reports_text') %></h1>
  <h3><%= t('archived_grouped_exam_reports') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="bread_crumb">
    <%= link_to t('exam_text'), exam_index_path %> &raquo;
    <%= link_to t('report_center'), report_center_exam_index_path %> &raquo;
    <%= t('archived_grouped_exam_reports') %>
  </div>
  <div class="box">
    <%= form_for :exam_report, url: archived_batches_exam_report_exam_reports_path do |x| %>
      <div class="label-field-pair">
        <label><%= t('select_a_course') %> :<%= image_tag("loader.gif",
            :align => "absmiddle",
            :border => 0,
            :id => "loader",
            :style =>"display: none;" ) %></label>
        <div class="text-input-bg">
          <%= select :exam_report, :course_id,
            @courses.map {|c| [c.full_name, c.id]},
            {prompt: t('select_a_course')},
            {onChange: "#{remote_function(url: list_inactivated_batches_exam_reports_path(course_id: "value") ,
            with: "'course_id='+value",
            before: "Element.show('loader')",
            success: "Element.hide('loader')"
            )}"} %>
        </div>
      </div>
      <div class="label-field-pair">
        <label><%= t('select_a_batch') %> :</label>
        <div class="text-input-bg"><div id="inactive_batches">
            <%= select :exam_report, :batch_id,
              @batches.map {|b| [b.full_name, b.id]},
              {:prompt => "#{t('select_a_batch')}"},{:onChange => "#{remote_function(:url => {:action => "final_archived_report_type"},
              :with => "'batch_id='+value"
              )}"} %></div></div>
      </div>
      <div id="archived_report_type"></div>

      <%= submit_tag "", :value => "â–º#{t('view')}", :class => "submit_button" %>

    <% end %>

    <div class="extender">

    </div>
  </div>
</div>
