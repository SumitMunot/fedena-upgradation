- content_for :head do
  = stylesheet_link_tag("observation_groups/show.css")
#content-header
  = image_tag("examination/show_exam.png")
  %h1 Formative Assessment
  %h3 Assessment Criterias
  #app-back-button
    = back_button
#inner-tab-menu
  %ul
    %li= link_to_remote "#{t('new_text')}", :url => { :action => 'new_fa_criteria', :fa_group_id => @fa_group.id }
#page-yield
  #flash-box
    - unless flash[:notice].nil?
      %p.flash-msg
        = flash[:notice]
  .bread_crumb
    = link_to t('fa_groups_text'), fa_groups_path
    »
    \#{@fa_group.name}
  .title
    = t("name_text")
    .description
      \:   #{@fa_group.name}
  .title
    = t("description_text")
    .description
      \:   #{@fa_group.desc}
  .title
    = t("cce_exam_category")
    .description
      \:   #{@fa_group.cce_exam_category.name}
  #fa_criterias
    = render  :partial=>'fa_criterias'
  #modal-box{:style => "display:none;"}
