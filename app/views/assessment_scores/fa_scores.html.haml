#content-header
  = image_tag("examination/show_exam.png")
  %h1 FA Scores
  %h3 Enter Grades
  #app-back-button
    = back_button
#page-yield
  #flash-box
    - unless flash[:notice].nil?
      %p.flash-msg
        = flash[:notice]
  - unless flash[:warn_notice].nil?
    #errorExplanation.errorExplanation
      = flash[:warn_notice]
  #student_list= render :partial=>'student_list'
  #fa_sheet= render :partial=>'fa_sheet'
:javascript
  function set_active(){
    $('.active-link').each(function(e){
      e.removeClassName('active-link');
    });
    this.addClassName('active-link')
  }

  document.observe("dom:loaded", function() {
    $('.student-link').invoke('observe','click',draw_report);
    $('.student-link').invoke('observe','click',set_active);
    set_active.call($('#{@student.id}'))
  });
