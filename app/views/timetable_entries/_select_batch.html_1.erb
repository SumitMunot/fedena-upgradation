<div id="content-header">
  <%= image_tag("show_timetable.png") %>
  <h1><%= t('timetable_text') %></h1>
  <h3><%= t('select_class') %></h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png", border: 0), 'javascript: void(0);', onclick: "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <%= hidden_field_tag :timetable_id,@timetable.id  %>
  <%= form_for :timetable_entry do |s| %>
    <div class="label-field-pair">
      <label for="timetable_entry_course_id"><%= t('select_a_batch') %></label>
      <div class="text-input-bg"> <%= select :timetable_entry, :batch_id, @batches.map {|c| [c.full_name, c.id]},:prompt=> t('select_a_batch') %>
      </div>
    </div>

    <div class="submit-button">
      <%= submit_tag "â–º #{t('go')}", :class=>'submit-button' %>
    </div>

  <% end %>

</div>
