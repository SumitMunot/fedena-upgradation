<div id="content-header">
  <%= image_tag("attendence/attendence.png") %>
  <h1><%= t('attendance') %></h1>
  <h3><%= t('attendance' ) + ' '  + t('home') %> </h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png", border: 0), 'javascript:void(0);', onlclick: "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div id="box">
    <% if permitted_to? :index, :attendances and (@employee_subjects.present? or @privilege.include?("StudentAttendanceRegister") or @current_user.admin?) %>
        <div class="link-box">
          <div class="link-heading"><%= link_to t('attendance_register'), attendances_path %></div>
          <div class="link-descr"><%= t('attendance_registered_for_students') %></div>
        </div>
      <% end %>

      <% if permitted_to? :index, :attendance_reports or permitted_to? :index, :attendances or @allow_access == true%>
        <div class="link-box">
          <div class="link-heading">
            <%= link_to t('attendance_report'), attendance_reports_path %>
          </div>
          <div class="link-descr"><%= t('attendance_report_for_students') %></div>
        </div>
      <% end %>

    <!--
       <div class="link-box">
           <div class="link-heading"><%= link_to t('attendance_report'), :controller => "attendance_reports", :action => "advance_search" %></div>
           <div class="link-descr">Attendance report for students</div>
         </div>
    -->

    <div class="extender"></div>
  </div>


</div>
