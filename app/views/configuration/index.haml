#content-header
  = image_tag("show_settings.png")
  %h1= t('configuration_text')
  %h3
    = t('configuration_text')
    = t('home')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  #box
    - if permitted_to? :create, :courses
      .link-box
        .link-heading= link_to t('manage_course_batch'), courses_path
        .link-descr= t('add_a_new_course_or_batch')
    - if permitted_to? :settings, :configuration
      .link-box
        .link-heading= link_to t('manage_student_category'), categories_student_index_path
        .link-descr= t('add_student_category')
    - if permitted_to? :index, :subjects
      .link-box
        .link-heading= link_to t('manage_subject'), subjects_path
        .link-descr= t('manage_subjects_corresponding')
    - if permitted_to? :settings, :configuration
      .link-box
        .link-heading= link_to t('general_settings'), settings_configuration_index_path
        .link-descr= t('set_some_general_configuration')
    - if permitted_to? :settings, :configuration
      .link-box
        .link-heading= link_to t('add_admission_additional_detail'), add_additional_details_student_index_path
        .link-descr= t('set_some_additional_details')
    - if permitted_to? :index, :sms
      .link-box
        .link-heading= link_to t('sms_module'), sms_path
        .link-descr= t('enable_or_disable_sms_settings')
