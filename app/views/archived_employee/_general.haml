.profile_top_banner
  %span.profile= t('details')
  .profile-topbanner
.profile_info_label_top= t('joining_date')
.profile_info_text_top= I18n.l(@employee.joining_date, :format=>"%d %b,%Y")
.profile_info_label_top2= t('department')
.profile_info_text_top2= @employee.employee_department.name
.profile_info_label_top= t('category')
.profile_info_text_top= @employee.employee_category.name
.profile_info_label_top2= t('position')
.profile_info_text_top2
  = @employee.employee_position.name
.profile_info_label_top= t('grade')
.profile_info_text_top
  = @employee.employee_grade.name unless @employee.employee_grade.nil?
.profile_info_label_top2= t('job_title')
.profile_info_text_top2
  = @employee.job_title
.profile_info_label_top= t('manager')
.profile_info_text_top
  = @reporting_manager
  - if permitted_to? :change_reporting_manager, :employee
    = link_to "#{t('change')}", :controller=> "employee", :action=> "change_reporting_manager", :id=>@employee.id
.profile_info_label_top2= t('gender')
.profile_info_text_top2
  = t("#{@gender.downcase}")
.profile_info_label_top= t('status')
.profile_info_text_top
  = t("#{@status.downcase}")
.profile_info_label_top2= t('qualification')
.profile_info_text_top2
  = @employee.qualification
.profile_info_label_top= t('total_exp')
.profile_info_text_top
  = @total_years.to_s+"Years "+@total_months.to_s+"Months"
.profile_info_label_top2= t('exp_info')
.profile_info_text_top2
  = @employee.experience_detail
.extender
.edit-pdf-group
  - if permitted_to?  :profile_pdf , :employee
    .pdf
