%label.head_label
  = t('add_new_class_timing_for')
  %span
    - if @batch.nil?
      = t('common')
    - else
      = @batch.full_name
#ajax-create
  - form_remote_for :class_timing,
  - :url => { :action => 'create'} do |f|
    - batch_id = (@batch.nil? ? nil : @batch.id)
    = f.hidden_field :batch_id, :value => batch_id
    #form-errors
    .label-field-pair
      %label{:for => "name"}= t('name')
      .input-field= f.text_field :name
    .label-field-pair
      %label{:for => "name"}
        = t('start_time')
      .time-select-field= time_select :class_timing, :start_time, {:minute_step => 5}
    .label-field-pair
      %label{:for => "name"}
        = t('end_time')
      .time-select-field= time_select :class_timing, :end_time, {:minute_step => 5}
    .label-checkbox-pair
      %label
        = f.check_box :is_break, :checked => false
        = t('is_a_break')
    = f.submit "â–º #{t('save')}", :class => 'submit-button'
