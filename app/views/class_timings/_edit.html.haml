= csrf_meta_tag
%label.head_label
  = t('edit_class_timing_for')
  %span
    - if @batch.nil?
      = t('common')
    - else
      = @batch.full_name
#ajax-edit
  = form_for @class_timing, :remote => true do |f|
    #form-errors
    .label-field-pair
      %label{:for => "name"}= t('name')
      .text-input-bg= f.text_field :name
    .label-field-pair
      %label{:for => "name"}
        = t('start_time')
      .time-select-field= time_select :class_timing, :start_time, {:minute_step => 5}
    .label-field-pair
      %label{:for => "name"}= t('end_time')
      .time-select-field= time_select :class_timing, :end_time, {:minute_step => 5}
    .label-checkbox-pair
      - if @class_timing.is_break
        %label
          = f.check_box :is_break, :checked => true
          = t('is_a_break')
      - else
        %label
          = f.check_box :is_break, :checked => false
          = t('is_a_break')
    = submit_tag "â–º #{t('save')}", :class => 'submit-button'
