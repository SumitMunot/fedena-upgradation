#content-header
  %img{:alt => "Exam", :src => "examination/show_exam.png"}/
  %h1 CCE Reports
  %h3 Student-wise Report
  #app-back-button
    = back_button
#inner-tab-menu
  %ul
#page-yield
  #hider
    - unless flash[:notice].nil?
      %p#flash-msg.flash-msg
        = flash[:notice]
  .bread_crumb
    = link_to t('exam_text'), :controller => "exam", :action=>"index"
    »
    \#{link_to t('report_center'), :controller => "exam", :action => "report_center"} »
    \#{link_to t('cce_reports'), :controller => "cce_reports"} »
    Student-wise Report
  .label-field-pair
    %label{:for => "batch_id"}= t('select_a_batch')
    = image_tag("loader.gif",     |
      :align => "absmiddle",      |
      :border => 0,               |
      :id => "loader",            |
      :style =>"display: none;" ) |
    .text-input-bg
      = select :batch, :batch_id,                                                    |
        @batches.map {|b| [b.full_name, b.id]},                                      |
        {:prompt => "#{t('select_a_batch')}"},                                       |
        {:onChange => "#{remote_function(:url => {:action => "student_wise_report"}, |
        :with => "'batch_id='+ value",                                               |
        :before => "Element.show('loader')",                                         |
        :success => "Element.hide('loader')"                                         |
        )}"}                                                                         |
  #student_list
    = render  :partial=>"student_list"
  #report
:javascript
  function set_active(){
    $('.active-link').each(function(e){
      e.removeClassName('active-link themed_text');
    });
    this.addClassName('active-link themed_text')
  }
  function draw_report(){
    Element.show('loader')
    new Ajax.Request('/cce_reports/student_report',
    {asynchronous:true, evalScripts:true,
      parameters:'student='+this.id,onSuccess:function(request){Element.hide('loader')}
    })
  }
  document.observe("dom:loaded", function() {
    $('.student-link').invoke('observe','click',draw_report);
    $('.student-link').invoke('observe','click',set_active);
  });
