- content_for :head do
  = stylesheet_link_tag "exam/report_center"
#content-header
  %img{:alt => "Exam", :src => "examination/show_exam.png"}/
  %h1 CCE Reports
  %h3 Home
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .bread_crumb
    = link_to t('exam_text'), :controller => "exam", :action=>"index"
    »
    \#{link_to t('report_center'), :controller => "exam", :action => "report_center"} »
    \#{t('cce_reports')}
  .box
    - if permitted_to? :create_reports, :cce_reports
      .link-box
        .link-heading= link_to "Generate Reports" ,:action=>'create_reports'
        .link-descr Generate CCE Report from entered scores.
    - if permitted_to? :student_wise_report, :cce_reports
      .link-box
        .link-heading= link_to "View Student Report" ,:action=>'student_wise_report'
        .link-descr Student-wise CCE Report
